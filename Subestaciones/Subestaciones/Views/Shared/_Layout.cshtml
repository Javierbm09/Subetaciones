<!DOCTYPE html>
<html lang="es-es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title | Subestaciones - SIGERE</title>

    <!--STYLESHEET-->
    <!--Bootstrap Stylesheet-->
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet">
    <!--Nifty Stylesheet-->
    <link href="~/Content/css/nifty.min.css" rel="stylesheet">
    <!--ICONOS-->
    <link href='~/Content/css/openSans.css' rel='stylesheet' type='text/css'>
    <link href="~/Content/css/demo/nifty-demo-icons.min.css" rel="stylesheet">
    <link href="~/Content/plugins/themify-icons/themify-icons.min.css" rel="stylesheet">
    <link href="~/Content/plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <!--Pace - Page Load Progress Par-->
    <link href="~/Content/plugins/pace/pace.min.css" rel="stylesheet">
    <script src="~/Content/plugins/pace/pace.min.js"></script>
    <!--DataTables-->
    <link href="~/Content/plugins/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/plugins/datatables.net-buttons-bs/css/buttons.bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!--Select2-->
    <link href="~/Content/plugins/select2/css/select2.min.css" rel="stylesheet" type="text/css" />
    <!--DateRangePicker-->
    <link href="~/Content/css/daterangepicker.css" rel="stylesheet" type="text/css" />

    <!--CSS [ SECCION ]-->
    @RenderSection("styles", required: false)

</head>
<body>
    <div id="container" class="effect aside-float aside-bright mainnav-lg">
        <!--NAVBAR-->
        <header id="navbar">
            <div id="navbar-container" class="boxed">
                <!--logo & nombre-->
                <div class="navbar-header">
                    <a href="@Url.Action("Index","Home")" class="navbar-brand">
                        @*<img src="~/Content/images/logo.png" alt="Logo Subestaciones-SIGERE" class="brand-icon">*@
                        <div class="brand-title">
                            <span class="brand-text"> SUBESTACIONES </span>
                        </div>
                    </a>
                </div>
                <!--End brand logo & name-->
                <!--Navbar Dropdown-->
                <div class="navbar-content">
                    <ul class="nav navbar-top-links">

                        <!--Navigation toogle button-->
                        <li class="tgl-menu-btn">
                            <a class="mainnav-toggle" href="#">
                                <i class="demo-pli-list-view"></i>
                            </a>
                        </li>
                        <!--End Navigation toogle button-->
                        <!--Search-->
                        <li>
                            <div class="custom-search-form">
                                <label class="btn btn-trans" for="search-input" data-toggle="collapse" data-target="#nav-searchbox">
                                    <i class="demo-pli-magnifi-glass"></i>
                                </label>
                                @*<form>
                                    <div class="search-container collapse" id="nav-searchbox">
                                        <input id="search-input" type="text" class="form-control" placeholder="Type for search...">
                                    </div>
                                </form>*@
                            </div>
                        </li>
                        <!--End Search-->
                    </ul>
                    <ul class="nav navbar-top-links">
                        <!--User dropdown-->
                        <li id="dropdown-user" class="dropdown">
                            <a href="#" data-toggle="dropdown" class="dropdown-toggle text-right">
                                <span class="ic-user pull-right">
                                    <i class="demo-pli-male"></i>
                                </span>
                                <div class="username hidden-xs">@User.Identity.Name.ToString()</div>
                            </a>

                            <div class="dropdown-menu dropdown-menu-sm dropdown-menu-right panel-default">
                                <ul class="head-list">
                                    <li>
                                        <a href="#"><i class="demo-pli-gear icon-lg icon-fw"></i> Configurar</a>
                                    </li>
                                    <li>
                                        <a href="#"><i class="demo-pli-computer-secure icon-lg icon-fw"></i> Bloquear</a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("Logout","Personal")"><i class="demo-pli-unlock icon-lg icon-fw"></i> Salir</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                        <!--End user dropdown-->

                    </ul>
                </div>
                <!--End Navbar Dropdown-->
            </div>
        </header>
        <!--END NAVBAR-->
        <div class="boxed">
            <!--CONTENT CONTAINER-->
            <div id="content-container">
                <div id="page-head">

                    <!--Page Title-->
                    <div id="page-title">
                        <h1 class="page-header text-overflow">@ViewBag.PTitle</h1>
                    </div>
                    <!--End page title-->
                    <!--Breadcrumb-->
                    <ol class="breadcrumb">
                        @RenderSection("breadcrumb", required: false)
                    </ol>
                    <!--End breadcrumb-->
                </div>

                <!--Page content-->
                <div id="page-content">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="panel panel-body">
                                <div class="panel-heading">
                                    <h3>@ViewBag.ContentTitle</h3>
                                </div>
                                <div class="panel-body">
                                    @RenderBody()
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--End page content-->

            </div>
            <!--END CONTENT CONTAINER-->
            <!--MAIN NAVIGATION-->
            <nav id="mainnav-container">
                <div id="mainnav">
                    <!--Menu Lateral-->
                    <div id="mainnav-menu-wrap">
                        <div class="nano">
                            <div class="nano-content">
                                <!--Aside Menu-->
                                <ul id="mainnav-menu" class="list-group">

                                    <!--Category name-->
                                    <li class="list-header">Nomencladores</li>

                                    <!--Menu list item-->
                                    <li>

                                        <a href="#">
                                            <i class="ti-layout-accordion-list"></i>
                                            <span class="menu-title">Servicio CD</span>
                                            <i class="arrow"></i>
                                        </a>

                                        <ul class="collapse">
                                            <li>@Html.ActionLink("Cargadores", "Index", "Cargadores")</li>
                                            <li>@Html.ActionLink("Baterias", "Index", "NomencladorBaterias")</li>
                                            <li>@Html.ActionLink("Tensión", "Index", "Tension")</li>
                                        </ul>



                                        @*<a href="@Url.Action("Index","Cargadores")">
                                                <i class="ti-layout-accordion-list"></i>
                                                <span class="menu-title">Cargadores</span>
                                            </a>

                                            <a href="@Url.Action("Index","Baterias")">
                                                <i class="ti-calendar"></i>
                                                <span class="menu-title">Baterías</span>
                                            </a>

                                            <a href="@Url.Action("Index","Tension")">
                                                <i class=""></i>
                                                <span class="menu-title">Tensión</span>
                                            </a>*@

                                        <!-- <a href="#">
                                            <i class="ti-layout-cta-center"></i>
                                            <span class="menu-title">Servicio de Corriente Directa</span>
                                            <i class="arrow"></i>
                                        </a>

                                        <!--Submenu-->
                                        <!--<ul class="collapse">
                                            <li>@Html.ActionLink("Tipo de Cargador", "Index", "Cargadores") </li>
                                            <li>@Html.ActionLink("Tipo de Baterías", "Index", "Baterías")</li>
                                            <li>@Html.ActionLink("Tensión de Corriente Directa", "Index", "Tensión")</li>
                                        </ul>-->
                                    </li>

                                    <!--Menu list item-->
                                    <li>
                                        <a href="#">
                                            <i class="ti-layout-column4"></i>
                                            <span class="menu-title">Transformadores</span>
                                            <i class="arrow"></i>
                                        </a>

                                        <!--Submenu-->
                                        <ul class="collapse">
                                            <li>@Html.ActionLink("Transformadores de Corriente", "Index", "TransformadoresCorriente")</li>
                                            <li>@Html.ActionLink("Transformadores de Potencial", "Index", "TransformadoresPotencial")</li>
                                        </ul>
                                    </li>

                                    <li class="list-divider"></li>

                                    <!--Category name-->
                                    <li class="list-header">Protecciones</li>

                                    <!--Menu list item-->
                                    <li>
                                        <a href="@Url.Action("Index","EsquemasProteccion")">
                                            <i class="ti-layout-accordion-list"></i>
                                            <span class="menu-title">Esquemas</span>
                                        </a>
                                    </li>

                                    <!--Menu list item-->
                                    <li>
                                        <a href="@Url.Action("Index","Mantenimientos")">
                                            <i class="ti-paint-roller"></i>
                                            <span class="menu-title">Mantenimientos</span>
                                        </a>
                                    </li>

                                    <!--Menu list item-->
                                    <li>
                                        <a href="@Url.Action("Index","Averias")">
                                            <i class="ti-heart-broken"></i>
                                            <span class="menu-title">Averías</span>
                                        </a>
                                    </li>

                                    <li class="list-divider"></li>

                                    <!--Category name-->
                                    <li class="list-header">Informaciones</li>

                                    <!--Menu list item-->
                                    <li>
                                        <a href="#">
                                            <i class="ti-agenda"></i>
                                            <span class="menu-title">Reportes</span>
                                            <i class="arrow"></i>
                                        </a>
                                        <!--Submenu-->
                                        <ul class="collapse">
                                            <li>@Html.ActionLink("Reporte de Relevadores", "Relevadores", "Reportes")</li>
                                            <li>@Html.ActionLink("Reporte de Esquemas", "Esquemas", "Reportes")</li>
                                            <li>@Html.ActionLink("Reporte de Mantenimientos", "Mantenimientos", "Reportes")</li>
                                            <li>@Html.ActionLink("Reporte de Averías", "Averias", "Reportes")</li>
                                        </ul>
                                    </li>

                                </ul>
                                <!--End Aside Menu-->
                            </div>
                        </div>
                    </div>
                    <!--End menu-->
                </div>
            </nav>
            <!--END MAIN NAVIGATION-->
        </div>

        <!-- FOOTER -->
        <footer id="footer">
            <p class="pad-lft">&copy; @DateTime.Now.Year - UEB ATI Sancti Spíritus</p>
        </footer>
        <!-- END FOOTER -->
    </div>

    <!-- END OF CONTAINER -->
    <!--JAVASCRIPT-->
    <!--jQuery-->
    <script src="~/Scripts/template/jquery.min.js"></script>
    <!--BootstrapJS-->
    <script src="~/Scripts/template/bootstrap.min.js"></script>
    <!--NiftyJS-->
    <script src="~/Scripts/template/nifty.min.js"></script>
    <!--DataTables-->
    <script src="~/Content/plugins/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/plugins/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <script src="~/Content/plugins/datatables.net-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/Content/plugins/datatables.net-buttons-bs/js/buttons.bootstrap.min.js"></script>
    <script src="~/Content/plugins/datatables.net-buttons/js/buttons.flash.min.js"></script>
    <script src="~/Content/plugins/datatables.net-buttons/js/buttons.html5.min.js"></script>
    <script src="~/Content/plugins/datatables.net-buttons/js/buttons.print.min.js"></script>
    <script src="~/Content/plugins/pdfmake/build/pdfmake.min.js"></script>
    <script src="~/Content/plugins/jszip/dist/jszip.min.js"></script>
    <!--Select2-->
    <script src="~/Content/plugins/select2/js/select2.min.js"></script>
    <!--DateRangePicker-->
    <script src="~/Scripts/template/moment.min.js"></script>
    <script src="~/Scripts/template/daterangepicker.js"></script>

    <!--SectionScripts -->
    @RenderSection("script", required: false)

</body>
</html>
