@model Subestaciones.Models.NomencladorBaterias

@{
    ViewBag.Title = "EditarBaterías";
    ViewBag.PTitle = "Editar Tipo de Baterías";
}


<!-- content starts here -->
<div class="x_content">
    <!-- content starts here -->

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdBateria)

        <div id="SeccionTipoBaterias">
            <h4>Modelo de Baterías</h4>
            <div class="row clearfix">
                <div class="col-md-12">
                    <div id="VPTipoBaterias" class="form-group">
                        @Html.EditorFor(model => model.TipoBateria, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.TipoBateria, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div id="SeccionCapacidadBateria">
            <h4>Capacidad de Baterías</h4>
            <div class="row clearfix">
                <div class="col-md-12">
                    <div id="VPCapacidadBaterias" class="form-group">
                        @Html.EditorFor(model => model.CapacidadBateria, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.CapacidadBateria, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div id="SeccionTensionBateria">
            <h4>Tensión Nominal</h4>
            <div class="row clearfix">
                <div class="col-md-12">
                    <div id="VPTensionBaterias" class="form-group">
                        @Html.EditorFor(model => model.TensionBateria, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.TensionBateria, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        @Html.HiddenFor(model => model.ClaseBateria)
        @Html.ValidationMessageFor(model => model.ClaseBateria, "", new { @class = "text-danger" })
        <div id="SeccionClaseBateria">
            <h4>Tipo</h4>
            <div class="row clearfix">
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.ValidationMessageFor(model => model.ClaseBateria, "", new { @class = "text-danger" })
                        @Html.DropDownListFor(model => model.ClaseBateria, (IEnumerable<SelectListItem>)ViewBag.Opciones,"", htmlAttributes: new { @class = "select2_single form-control" })
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Guardar Cambios</button>
                <a class="btn btn-default" href="@Url.Action("Index","NomencladorBaterias")"><i class="fa fa-list"></i> Listado</a>
            </div>
        </div>
    </div>

    }

    @section styles {
        @Styles.Render("~/Style/Select2")
    }

    @section script {
        @Scripts.Render("~/Script/Select2")
    }