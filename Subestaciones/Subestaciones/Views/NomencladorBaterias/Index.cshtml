@model IEnumerable<Subestaciones.Models.NomencladorBaterias>

@{
    ViewBag.Title = "Baterías";
    ViewBag.PTitle = "Lista de Baterías";

}

@section breadcrumb{
    <li><a href="#"><i class="ti-layout-accordion-list"></i></a></li>
    <li class="active">Baterías</li>
}

<div class="row">
    <div class="col-md-12">
        <table id="datatable" class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Modelo de Baterías</th>
                    <th>Capacidad</th>
                    <th>Tensión Nominal</th>
                    <th>Tipo</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.TipoBateria)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CapacidadBateria)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TensionBateria)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ClaseBateria)
                        </td>
                        <td style="width: 95px;">                            
                            <a href="@Url.Action("Details","NomencladorBaterias", new { id = item.IdBateria } )" class="btn btn-info btn-xs" title="Detalles"><i class="fa fa-eye"></i>  </a>
                            <a href="@Url.Action("Edit","NomencladorBaterias", new { id = item.IdBateria } )" class="btn btn-warning btn-xs" title="Editar"><i class="fa fa-pencil"></i>  </a>                            
                            <a href="@Url.Action("Delete","NomencladorBaterias", new { id = item.IdBateria } )" class="btn btn-danger btn-xs" title="Eliminar"><i class="fa fa-trash-o"></i>  </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


<div class="row">
    <div class="col-md-12">
        <a href="@Url.Action("Create","NomencladorBaterias")" class="btn btn-info"><i class="fa fa-plus"></i> Nuevo</a>
    </div>
</div>

@section script {
    <script src="~/Scripts/custom/datatables.js"></script>
}
