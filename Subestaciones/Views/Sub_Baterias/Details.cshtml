<!-- END PAGE HEAD-->
<!-- BEGIN PAGE CONTENT BODY -->
<div class="page-content">
    <div class="container-fluid">
        <!-- BEGIN PAGE BREADCRUMBS -->
        <ul class="page-breadcrumb breadcrumb">
            <li>
                <a href="@Url.Action("Index","Sub_RedCorrienteDirecta")">Lista de servicios de corriente directa</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <span>Detalles bater&iacute;as</span>
            </li>
        </ul>
        <!-- END PAGE BREADCRUMBS -->
        <!-- BEGIN PAGE CONTENT INNER -->
        <div class="page-content-inner">
            <div class="row">
                <div class="col-md-12">

                    <div class="portlet box blue">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="ti-stats-down"></i>Detalles bater&iacute;as del servicio de corriente directa
                            </div>
                        </div>
                        <div class="portlet-body form">

                            @using (Html.BeginForm())
                            {
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.Id_ServicioCDBat)
                                @Html.AntiForgeryToken()

                                <!-- BEGIN FORM-->

                                <div class="horizontal-form">
                                    <div class="form-body">
                                      

                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.modelo, htmlAttributes: new { @class = "control-label" })
                                                    @Html.EditorFor(model => model.modelo, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })

                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group" id="cargarCapacidad">
                                                    <label class="control-label">Capacidad</label>
                                                    <input id="capacidad" type="text" class="form-control" value="" readonly="readonly" />
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group" id="cargarClase">
                                                    <label class="control-label">Tipo Batería</label>
                                                    <input id="tipobateria" type="text" class="form-control" value="" readonly="readonly" />
                                                </div>
                                            </div>


                                        </div>

                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.Densisdad, htmlAttributes: new { @class = "control-label" })
                                                    @Html.EditorFor(model => model.Densisdad, new { htmlAttributes = new { @class = "form-control" , @readonly="readonly"} })
                                                    @Html.ValidationMessageFor(model => model.Densisdad, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group" id="cargarTension">
                                                    <label class="control-label">Tensión (V)</label>
                                                    <input id="tension" type="text" class="form-control" value="" readonly="readonly" />
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.Voltaje_Vasos, htmlAttributes: new { @class = "control-label " })
                                                    @Html.EditorFor(model => model.Voltaje_Vasos, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })

                                                </div>
                                            </div>

                                        </div>

                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.CantidadVasos, htmlAttributes: new { @class = "control-label " })
                                                    @Html.EditorFor(model => model.CantidadVasos, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })

                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.PesoCadaVaso, htmlAttributes: new { @class = "control-label " })
                                                    @Html.EditorFor(model => model.PesoCadaVaso, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })

                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.VoltajeFlotacion, htmlAttributes: new { @class = "control-label " })
                                                    @Html.EditorFor(model => model.VoltajeFlotacion, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })

                                                </div>
                                            </div>


                                        </div>
                                        <div class="row">

                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.CantVasosPilotos, htmlAttributes: new { @class = "control-label " })
                                                    @Html.EditorFor(model => model.CantVasosPilotos, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })

                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.CantElectVasos, htmlAttributes: new { @class = "control-label " })
                                                    @Html.EditorFor(model => model.CantElectVasos, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })

                                                </div>
                                            </div>

                                            <div class="col-md-4">
                                                <div class="form-group" id="cargarTension">
                                                    <label class="control-label">Total de electrolitos</label>
                                                    <input id="total" type="text" class="form-control" value="" readonly="readonly" />
                                                </div>
                                            </div>

                                        </div>

                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.Fabricante, htmlAttributes: new { @class = "control-label " })
                                                    @Html.EditorFor(model => model.Fabricante, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })

                                                </div>
                                            </div>
                                            <div class="col-md-2">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.MesFab, htmlAttributes: new { @class = "control-label" })
                                                    @Html.EditorFor(model => model.MesFab, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.MesFab, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-md-2">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.AnnoFab, htmlAttributes: new { @class = "control-label " })
                                                    @Html.EditorFor(model => model.AnnoFab, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })

                                                </div>
                                            </div>

                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.Instalado, htmlAttributes: new { @class = "control-label" })
                                                    @Html.EditorFor(model => model.Instalado, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })


                                                </div>
                                            </div>





                                        </div>
                                        <div class="panel panel-bordered-primary">
                                            <div class="panel-heading">
                                                <h3 class="panel-title">Datos de Carga de la Batería</h3>
                                            </div>
                                            <div class="panel-body">
                                                <div class="row">
                                                    <div class="col-md-4">
                                                        <div class="form-group">
                                                            @Html.LabelFor(model => model.VoltajeEcualizanteCargaBat, htmlAttributes: new { @class = "control-label" })
                                                            @Html.EditorFor(model => model.VoltajeEcualizanteCargaBat, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })

                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <div class="form-group">
                                                            @Html.LabelFor(model => model.TiempoCargaBat, htmlAttributes: new { @class = "control-label " })
                                                            @Html.EditorFor(model => model.TiempoCargaBat, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })

                                                        </div>
                                                    </div>

                                                    <div class="col-md-4">
                                                        <div class="form-group">
                                                            @Html.LabelFor(model => model.PeriodicidadCargaBat, htmlAttributes: new { @class = "control-label" })
                                                            @Html.EditorFor(model => model.PeriodicidadCargaBat, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })

                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>


                                        <div class="form-actions right">
                                            <a class="btn btn-info" href="@Url.Action("Edit","Sub_RedCorrienteDirecta",new {Id_ServicioCD= Model.Id_ServicioCDBat })"><i class="fa fa-angle-left"></i> Cancelar</a>
                                            <a class="btn btn-warning" href="@Url.Action("Edit","Sub_Baterias", new {id = Model.Id_Bateria })"><i class="fa fa-pencil"></i>Editar</a>

                                        </div>
                                    </div>
                                </div>
                            }
                            <!-- END FORM-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END PAGE CONTENT INNER -->
    </div>
</div>
<!-- END PAGE CONTENT BODY -->
<!-- END CONTENT BODY -->
