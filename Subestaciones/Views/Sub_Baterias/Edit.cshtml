    <script>
        $(document).ready(function () {
            inicializar_select2();

            $('.datepicker').datepicker({
                todayHighlight: true,
                todayBtn: "linked",
                language: "es",
                format: "yyyy/mm/dd",
                autoclose: true
            });

            function inicializar_select2() {
                $(".select2").select2({
                    placeholder: "Seleccione un elemento de la lista"
                });
            }
                        //<script>
    //$(document).ready(function () {

        $("#CantVasosPilotos").change(function () {
            var cvp = $("#CantVasosPilotos").val();
            var cev = $("#CantElectVasos").val();
            if (cvp != null && cev != null) {
                $("#total").val(cvp * cev);
            }
        });

        $("#CantElectVasos").change(function () {
            var cvp = $("#CantVasosPilotos").val();
            var cev = $("#CantElectVasos").val();
            if (cvp != null && cev != null) {
                $("#total").val(cvp * cev);
            }
        });


        $("#Tipo").on("change", function () {
            var TB = $("#Tipo").val();
            $.ajax({
                url: '@Url.Action("Cargar_datos_Bateria", "Sub_Baterias")',
                type: "POST",
                datatype: "json",
                data: { id_tipoBateria: TB },
                success: function (data) {
                    $("#capacidad").val(data.CapacidadBateria);
                    $("#tipobateria").val(data.ClaseBateria);
                    $("#tension").val(data.TensionBateria);
                }
            });
        });
        $("#Tipo").trigger("change");

    });
    </script>
}
