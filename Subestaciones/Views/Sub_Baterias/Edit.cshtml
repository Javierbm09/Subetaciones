<!-- END PAGE HEAD-->
<!-- BEGIN PAGE CONTENT BODY -->
<div class="page-content">
    <div class="container-fluid">
        <!-- BEGIN PAGE BREADCRUMBS -->
        <ul class="page-breadcrumb breadcrumb">
            <li>
                <a href="@Url.Action("Index","Sub_RedCorrienteDirecta")">Lista de servicios de corriente directa</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <span>Editar bater&iacute;as</span>
            </li>
        </ul>
        <!-- END PAGE BREADCRUMBS -->
        <!-- BEGIN PAGE CONTENT INNER -->
        <div class="page-content-inner">
            <div class="row">
                <div class="col-md-12">

                    <div class="portlet box blue">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="ti-stats-down"></i>Editar bater&iacute;as del servicio de corriente directa
                            </div>
                        </div>
                        <div class="portlet-body form">
                            @using (Html.BeginForm())
                            {

                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.Id_ServicioCDBat)
                                @Html.HiddenFor(model => model.Id_Bateria)


                                <!-- BEGIN FORM-->

                                <div class="horizontal-form">
                                    <div class="form-body">
                                        <div class="row" style="display:none">
                                            @Html.ValidationMessageFor(model => model.Tipo, "", new { @class = "text-danger" })
                                            @*@Html.ValidationMessageFor(model => model.NombreServicioCD, "", new { @class = "text-danger" })*@

                                        </div>

                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.Tipo, htmlAttributes: new { @class = "control-label" })
                                                    @Html.DropDownListFor(model => model.Tipo, ViewBag.TiposBaterias as SelectList,
"Seleccione un elemento de la lista", htmlAttributes: new { @class = "form-control select2" })
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group" id="cargarCapacidad">
                                                    <label class="control-label">Capacidad</label>
                                                    <input id="capacidad" type="text" class="form-control" value="" readonly="readonly" />
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group" id="cargarClase">
                                                    <label class="control-label">Tipo Batería</label>
                                                    <input id="tipobateria" type="text" class="form-control" value="" readonly="readonly" />
                                                </div>
                                            </div>


                                        </div>

                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.Densisdad, htmlAttributes: new { @class = "control-label" })
                                                    @Html.EditorFor(model => model.Densisdad, new { htmlAttributes = new { @class = "form-control", @type="number" } })
                                                    @Html.ValidationMessageFor(model => model.Densisdad, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group" id="cargarTension">
                                                    <label class="control-label">Tensión (V)</label>
                                                    <input id="tension" type="text" class="form-control" value="" readonly="readonly" />
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.Voltaje_Vasos, htmlAttributes: new { @class = "control-label " })
                                                    @Html.EditorFor(model => model.Voltaje_Vasos, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                                                    @Html.ValidationMessageFor(model => model.Voltaje_Vasos, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                        </div>

                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.CantidadVasos, htmlAttributes: new { @class = "control-label " })
                                                    @Html.EditorFor(model => model.CantidadVasos, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                                                    @Html.ValidationMessageFor(model => model.CantidadVasos, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.PesoCadaVaso, htmlAttributes: new { @class = "control-label " })
                                                    @Html.EditorFor(model => model.PesoCadaVaso, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                                                    @Html.ValidationMessageFor(model => model.PesoCadaVaso, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.VoltajeFlotacion, htmlAttributes: new { @class = "control-label " })
                                                    @Html.EditorFor(model => model.VoltajeFlotacion, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                                                    @Html.ValidationMessageFor(model => model.VoltajeFlotacion, "", new { @class = "text-danger" })
                                                </div>
                                            </div>


                                        </div>
                                        <div class="row">

                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.CantVasosPilotos, htmlAttributes: new { @class = "control-label " })
                                                    @Html.EditorFor(model => model.CantVasosPilotos, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                                                    @Html.ValidationMessageFor(model => model.CantVasosPilotos, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.CantElectVasos, htmlAttributes: new { @class = "control-label " })
                                                    @Html.EditorFor(model => model.CantElectVasos, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                                                    @Html.ValidationMessageFor(model => model.CantElectVasos, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="col-md-4">
                                                <div class="form-group" id="cargarTension">
                                                    <label class="control-label">Total de electrolitos</label>
                                                    <input id="total" type="text" class="form-control" value="" readonly="readonly" />
                                                </div>
                                            </div>

                                        </div>

                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.Fabricante, htmlAttributes: new { @class = "control-label " })
                                                    @Html.DropDownListFor(model => model.Fabricante, ViewBag.Fab as SelectList,
"Seleccione un elemento de la lista", htmlAttributes: new { @class = "form-control select2" })
                                                    @Html.ValidationMessageFor(model => model.Fabricante, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-md-2">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.MesFab, htmlAttributes: new { @class = "control-label" })
                                                    @Html.DropDownListFor(model => model.MesFab, ViewBag.mes as SelectList,
"Seleccione un elemento de la lista", htmlAttributes: new { @class = "form-control select2" })
                                                    @Html.ValidationMessageFor(model => model.MesFab, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-md-2">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.AnnoFab, htmlAttributes: new { @class = "control-label " })
                                                    @Html.DropDownListFor(model => model.AnnoFab, Enumerable.Range(0, (DateTime.Now.Year - 1900 - 1)).Select(i => new SelectListItem { Text = (DateTime.Now.Year - i).ToString(), Value = (DateTime.Now.Year - i).ToString() }), "", htmlAttributes: new { @class = "form-control select2" })
                                                    @Html.ValidationMessageFor(model => model.AnnoFab, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.FechaInstalado, htmlAttributes: new { @class = "control-label" })
                                                    @Html.EditorFor(model => model.FechaInstalado, new { htmlAttributes = new { @class = "form-control datepicker" } })
                                                    @Html.ValidationMessageFor(model => model.FechaInstalado, "", new { @class = "text-danger" })

                                                </div>
                                            </div>





                                        </div>
                                        <div class="panel panel-bordered-primary">
                                            <div class="panel-heading">
                                                <h3 class="panel-title">Datos de Carga de la Batería</h3>
                                            </div>
                                            <div class="panel-body">
                                                <div class="row">
                                                    <div class="col-md-4">
                                                        <div class="form-group">
                                                            @Html.LabelFor(model => model.VoltajeEcualizanteCargaBat, htmlAttributes: new { @class = "control-label" })
                                                            @Html.EditorFor(model => model.VoltajeEcualizanteCargaBat, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                                                            @Html.ValidationMessageFor(model => model.VoltajeEcualizanteCargaBat, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <div class="form-group">
                                                            @Html.LabelFor(model => model.TiempoCargaBat, htmlAttributes: new { @class = "control-label " })
                                                            @Html.EditorFor(model => model.TiempoCargaBat, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                                                            @Html.ValidationMessageFor(model => model.TiempoCargaBat, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>

                                                    <div class="col-md-4">
                                                        <div class="form-group">
                                                            @Html.LabelFor(model => model.PeriodicidadCargaBat, htmlAttributes: new { @class = "control-label" })
                                                            @Html.EditorFor(model => model.PeriodicidadCargaBat, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                                                            @Html.ValidationMessageFor(model => model.PeriodicidadCargaBat, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>


                                        <div class="form-actions right">
                                            <a class="btn btn-danger" href="@Url.Action("Edit","Sub_RedCorrienteDirecta",new {Id_ServicioCD= Model.Id_ServicioCDBat })"><i class="fa fa-angle-left"></i> Cancelar</a>
                                            <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Guardar</button>
                                        </div>
                                    </div>
                                </div>
                            }
                            <!-- END FORM-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END PAGE CONTENT INNER -->
    </div>
</div>
<!-- END PAGE CONTENT BODY -->
<!-- END CONTENT BODY -->
