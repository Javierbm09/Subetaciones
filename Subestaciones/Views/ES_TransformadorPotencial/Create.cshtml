    <script>
    $(document).ready(function () {
        inicializar_select2();

        $('.datepicker').datepicker({
            todayHighlight: true,
            todayBtn: "linked",
            language: "es",
            format: 'yyyy/mm/dd',
            autoclose: true
        }).datepicker();

        function inicializar_select2() {
            $(".select2").select2({
                placeholder: "Seleccione un elemento de la lista"
            });
        }

        $("#CodSub").change(function () {
            cargarTEquipo();
        });

        $("#Tipo_Equipo_Primario").change(function () {
            cargarTEquipo();

        });


        function cargarTEquipo() {

            var TE = $("#Tipo_Equipo_Primario").val();
            var sub = $("#CodSub").val();
            if (TE != "" && sub != "") {
                $.ajax({
                    url: '@Url.Action("CargarEquipo", "ES_TransformadorPotencial")',
                    method: "POST",
                    data: { tipoequipo: TE,codsub: sub },
                    success: function (data) {
                        $('#cargarEquipo').html(data);

                    }
                });
            }
        }


    });
    </script>
