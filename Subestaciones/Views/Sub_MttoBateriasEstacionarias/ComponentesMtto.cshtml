@model Subestaciones.Models.Clases.Sub_MttoBateriasEstacionariasViewModel

@{
    ViewBag.Title = "Mantenimiento de las Baterías Estacionarías";
}

<!-- END PAGE HEAD-->
<!-- BEGIN PAGE CONTENT BODY -->
<div class="page-content">
    <div class="container-fluid">
        <!-- BEGIN PAGE BREADCRUMBS -->
        <ul class="page-breadcrumb breadcrumb">
            <li>
                <a href="@Url.Action("Index","Sub_MttoBateriasEstacionarias")">Lista de mantenimientos</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <span>Insertar</span>
            </li>
        </ul>
        <!-- END PAGE BREADCRUMBS -->
        <!-- BEGIN PAGE CONTENT INNER -->
        <div class="page-content-inner">
            <div class="row">
                <div class="col-md-12">

                    <div class="portlet box blue">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="fa fa-binoculars"></i>Insertar componentes de la baterías estacionarías
                            </div>
                        </div>
                        <div class="portlet-body form">
                            @using (Html.BeginForm("CreateComponentesExtras", "Sub_MttoBateriasEstacionarias", FormMethod.Post, new { enctype = "multipart/form-data", @id = "form" }))

                            {
                                @Html.ValidationSummary(true)
                                @Html.AntiForgeryToken()

                                <!-- BEGIN FORM-->

                                <div class="horizontal-form">
                                    <div class="form-body">
                                        <div class="row" style="text-align: center; font-size:20px">
                                            @Html.ValidationMessageFor(model => model.Sub_MBE.MensajeExistenciaMtto, "", new { @class = "text-danger" })

                                            @Html.HiddenFor(model => model.Sub_MBE.id_Bateria, new { @id = "id_Bateria" })
                                            @Html.HiddenFor(model => model.Sub_MBE.EA_RedCD, new { @id = "EA_RedCD" })
                                        </div>

                                        <div class="panel">
                                            <div class="panel-heading">Datos generales del mantenimiento</div>
                                            <div class="panel-body">
                                                <div class="col-md-3">
                                                    <div class="form-group">
                                                        @Html.LabelFor(model => model.Sub_MBE.subestacion, htmlAttributes: new { @class = "control-label" })

                                                        @Html.DropDownListFor(model => model.Sub_MBE.subestacion, ViewBag.ListaSub as SelectList,
"Seleccione un elemento de la lista", htmlAttributes: new { @class = "form-control select2", @id = "codSub" })
                                                        @Html.ValidationMessageFor(model => model.Sub_MBE.subestacion, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                                <div class="col-md-3">
                                                    <div class="form-group">
                                                        @Html.LabelFor(model => model.Sub_MBE.TipoMtto, htmlAttributes: new { @class = "control-label" })

                                                        @Html.DropDownListFor(model => model.Sub_MBE.TipoMtto, ViewBag.TiposMtto as SelectList,
"Seleccione un elemento de la lista", htmlAttributes: new { @class = "form-control select2" })
                                                        @Html.ValidationMessageFor(model => model.Sub_MBE.TipoMtto, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                                <div class="col-md-3">
                                                    <div class="form-group">
                                                        @Html.LabelFor(model => model.Sub_MBE.RealizadoPor, htmlAttributes: new { @class = "control-label" })
                                                        @Html.DropDownListFor(model => model.Sub_MBE.RealizadoPor, ViewBag.personal as SelectList,
"Seleccione un elemento de la lista", htmlAttributes: new { @class = "form-control select2" })
                                                        @Html.ValidationMessageFor(model => model.Sub_MBE.RealizadoPor, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                                <div class="col-md-2">
                                                    @Html.LabelFor(model => model.Sub_MBE.fechaMtto, htmlAttributes: new { @class = "control-label" })
                                                    @Html.EditorFor(model => model.Sub_MBE.fechaMtto, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.Sub_MBE.fechaMtto, "", new { @class = "text-danger" })

                                                </div>
                                                <div class="col-md-1">
                                                    <div class="form-group">
                                                        @Html.LabelFor(model => model.Sub_MBE.Mantenido, htmlAttributes: new { @class = "control-label " })
                                                        <br />
                                                        @Html.EditorFor(model => model.Sub_MBE.Mantenido.Value, new
                                                           {
                                                               htmlAttributes = new
                                                               {
                                                                   Name = "Sub_MBE.Mantenido",
                                                                   @id = "Sub_MBE_Mantenido",
                                                                   @class = "form-control js-switch",
                                                                   @readonly = "readonly"
                                                               }
                                                           })
                                                        @Html.ValidationMessageFor(model => model.Sub_MBE.Mantenido, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="panel">
                                            <div class="tabbable-line boxless tabbable-reversed ">
                                                <ul class="nav nav-tabs">
                                                    <li>
                                                        <a href="#tabTransf_2" data-toggle="tab" id="tabTransf2">Datos de los vasos </a>
                                                    </li>
                                                    <li>
                                                        <a href="#tabTransf_3" data-toggle="tab" id="tabTransf3">Instrumentos utilizados durante el mantenimiento </a>
                                                    </li>
                                                </ul>
                                                <div class="tab-content">
                                                    <div class="tab-pane active" id="tabTransf_2">
                                                        <div class="panel-body">
                                                            <div class=" col-md-12" id="TablaSub_MBEV">

                                                                <table style="width:50%" class="table">
                                                                    <thead>
                                                                        <tr>
                                                                            <th>Nro. Vasos</th>
                                                                            <th id="densidad">Densidad (mg/cm3)</th>
                                                                            <th id="voltaje">Voltaje (V)</th>
                                                                            <th id="temp">Temperatura (°C)</th>
                                                                        </tr>
                                                                    </thead>
                                                                    <tbody>
                                                                        @{
                                                                            if (Model != null && Model.Sub_MBEV != null)
                                                                            {
                                                                                for (int i = 0; i < ViewBag.nroVasos; i++)
                                                                                {
                                                                                    <tr>

                                                                                        <td>
                                                                                            @Html.TextBoxFor(model => model.Sub_MBEV[i].nroVaso, new { @class = "col-md-2", @id = "Sub_MBEV_nroVaso" + i })
                                                                                        </td>
                                                                                        <td>
                                                                                            @Html.TextBoxFor(model => model.Sub_MBEV[i].densidad, new { @class = "col-md-2", @id = "Sub_MBEV_densidad" + i })
                                                                                        </td>
                                                                                        <td>
                                                                                            @Html.TextBoxFor(model => model.Sub_MBEV[i].voltaje, new { @class = "col-md-2", @id = "Sub_MBEV_voltaje" + i })
                                                                                        </td>
                                                                                        <td>
                                                                                            @Html.TextBoxFor(model => model.Sub_MBEV[i].temperatura, new { @class = "col-md-2", @id = "Sub_MBEV_temperatura" + i })
                                                                                        </td>

                                                                                    </tr>
                                                                                }
                                                                            }
                                                                        }
                                                                    </tbody>
                                                                </table>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="tab-pane" id="tabTransf_3">
                                                        <div class="panel-body">
                                                            <div id="bootstrap_alerts_instrumentos"> </div>
                                                            <div class="row">
                                                                <div class="col-md-4">
                                                                    <div class="form-group">
                                                                        @Html.LabelFor(model => model.Sub_MBEI.Id_InstrumentoMedicion, htmlAttributes: new { @class = "control-label" })
                                                                        @Html.DropDownListFor(model => model.Sub_MBEI.Id_InstrumentoMedicion, ViewBag.Instrumento as SelectList,
                "Seleccione un elemento de la lista", htmlAttributes: new { @class = "select2" })
                                                                        @Html.ValidationMessageFor(model => model.Sub_MBEI.Id_InstrumentoMedicion, "", new { @class = "text-danger" })
                                                                    </div>
                                                                </div>
                                                                <p>
                                                                    <div class="col-md-2" style="margin-top: 4px">
                                                                        <div class="form-group">
                                                                            <a class="btn blue" href="javascript:;" id="_insertarInstrumentosAction"><i class="fa fa-angle-right"></i> Insertar</a>
                                                                        </div>
                                                                    </div>
                                                                </p>
                                                            </div>
                                                            <div id="TablaInstrumentosBateriasEstacionarias"></div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-actions right">
                                            <a class="btn btn-primary" href="@Url.Action("Index","Sub_MttoBateriasEstacionarias")"><i class="fa fa-list"></i> Listado de mantenimientos</a>
                                            <button type="submit" class="btn blue">
                                                <i class="fa fa-plus"></i> Guardar
                                            </button>
                                        </div>

                                    </div>
                                </div>
                            }
                            <!-- END FORM-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END PAGE CONTENT INNER -->
    </div>
</div>
<!-- END PAGE CONTENT BODY -->
<!-- END CONTENT BODY -->

