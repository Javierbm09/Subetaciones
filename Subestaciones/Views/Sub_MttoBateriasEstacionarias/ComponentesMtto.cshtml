    <script src="~/Scripts/assets/plugins/jqwidgets/jqxgrid.sort.js" type="text/javascript"></script>
    <script src="~/Scripts/assets/plugins/jqwidgets/jqxgrid.columnsresize.js" type="text/javascript"></script>
    <script src="~/Scripts/assets/plugins/jqwidgets/jqxgrid.filter.js" type="text/javascript"></script>
    <script src="~/Scripts/assets/plugins/jqwidgets/localization.js" type="text/javascript"></script>
    <script src="~/Scripts/assets/plugins/jqwidgets/jqxnumberinput.js" type="text/javascript"></script>
    <script src="~/Scripts/assets/plugins/jqwidgets/jqxcombobox.js" type="text/javascript"></script>
    <script src="~/Scripts/assets/plugins/jqwidgets/jqxinput.js" type="text/javascript"></script>
    <script src="~/Scripts/assets/plugins/jqwidgets/jqxcheckbox.js" type="text/javascript"></script>

    <script>
        var idMBE = @ViewBag.IdMttoBE;
        var idB = @ViewBag.IdBateria;
        var ea_red = @ViewBag.RedEA;

        $(document).ready(function () {
            inicializar_select2();

            function inicializar_select2() {
                $(".select2").select2({
                    placeholder: "Seleccione un elemento de la lista"
                });
            }

            let sub = "@ViewBag.Sub";
            let idMBE = @ViewBag.IdMttoBE;
            let idB = @ViewBag.IdBateria;
            let ea_red = @ViewBag.RedEA;

            let valorfecha = $("#Sub_MBE_fechaMtto").val();
            let newfecha = valorfecha.split(" ")[0];
            let diafecha = newfecha.split("/")[0];
            let mesfecha = newfecha.split("/")[1];
            let annofecha = newfecha.split("/")[2];
            let finalFecha = `${annofecha}-${mesfecha}-${diafecha}`;
            $('#Sub_MBE_fechaMtto').val(`${diafecha}/${mesfecha}/${annofecha}`)

            $('.js-switch').bootstrapSwitch({
                onText: "Si",
                offText: "No"
            });

            $("#codSub").attr('disabled', true);
            $("#Sub_MBE_TipoMtto").attr('disabled', true);
            $("#Sub_MBE_RealizadoPor").attr('disabled', true);
            $("#Sub_MBE_fechaMtto").attr('disabled', true);

            for (i = 0; i < @ViewBag.NroVasos; i++) {

                llenarTabla();

            }

            function llenarTabla() {

                var nombreNroVaso = "Sub_MBEV[" + i + "].nroVaso";
                var idNroVaso = "Sub_MBEV_nroVaso" + i;
                var nroVasoText = "#" + idNroVaso;

                var nombreDensidad = "Sub_MBEV[" + i + "].densidad";
                var idDensidad = "Sub_MBEV_densidad" + i;
                var DensidadText = "#" + idDensidad;

                var nombreVoltaje = "Sub_MBEV[" + i + "].voltaje";
                var idVoltaje = "Sub_MBEV_voltaje" + i;
                var VoltajeText = "#" + idVoltaje;

                var nombreTemperatura = "Sub_MBEV[" + i + "].temperatura";
                var idTemperatura = "Sub_MBEV_temperatura" + i;
                var TemperaturaText = "#" + idTemperatura;

                var inputId_MttoBatEstacionarias = '<input class="id_MBE" type="hidden" name="Sub_MBEV[' + i + '].id_MttoBatEstacionarias" >';
                var inputId_Bateria = '<input class="id_B" type="hidden" name="Sub_MBEV[' + i + '].id_Bateria" >';
                var inputEA_RedCD = '<input class="ea_red" type="hidden" name="Sub_MBEV[' + i + '].EA_RedCD" >';
                var inputSubestacion = '<input class="sub" type="hidden" name="Sub_MBEV[' + i + '].subestacion" >';


                var NroV = '<td><input text name="' + nombreNroVaso + '" id="' + idNroVaso + '" class="form-control"></text></td>';  //value="' +  i +'"
                var densidad = '<td><input text name="' + nombreDensidad + '" id="' + idDensidad + '" class="form-control"></text></td>';
                var voltaje = '<td><input text name="' + nombreVoltaje + '" id="' + idVoltaje + '" class="form-control"></text></td>';
                var temp = '<td><input text name="' + nombreTemperatura + '" id="' + idTemperatura + '" class="form-control"></text></td>';


                $("#TablaSub_MBEV tbody").append('<tr>' + NroV + densidad + voltaje + temp + inputSubestacion + inputId_MttoBatEstacionarias + inputId_Bateria + inputEA_RedCD + '</tr>');

                $(nroVasoText).attr("disabled", true);
                $(nroVasoText).val(i + 1);
            }


            $("#_insertarInstrumentosAction").on('click', function () {
                var instrumento = $("#Sub_MBEI_Id_InstrumentoMedicion option:selected").val();

                var datosValidos = true;
                var nombreCampo = "";
                if (instrumento == "" || instrumento == null || instrumento == 0) {
                    nombreCampo = "instrumento";
                    datosValidos = false;
                }

                if (!datosValidos) {
                    App.alert({
                        container: "#bootstrap_alerts_instrumentos", // alerts parent container(by default placed after the page breadcrumbs)
                        place: "prepend", // append or prepent in container
                        type: "danger",  // alert's type
                        message: "Debe seleccionar un " + nombreCampo + ".",  // alert's message
                        close: 1, // make alert closable
                        reset: 1, // close all previouse alerts first
                        focus: 1, // auto scroll to the alert after shown
                        closeInSeconds: 5,//, // auto close after defined seconds
                        icon: "fa fa-danger" // put icon before the message
                    });
                } else {
                    $.ajax({
                        cache: false,
                        dataType: 'json',
                        url: baseUrl + "Sub_MttoBateriasEstacionarias/InsertarInstrumento",
                        data: { idIM: instrumento, idMBE: idMBE, idB: idB, redEA: ea_red},
                        type: "POST",
                        success: function (data, status, xhr) {
                            $("#TablaInstrumentosBateriasEstacionarias").jqxGrid('updatebounddata');
                            App.alert({
                                container: "#bootstrap_alerts_instrumentos", // alerts parent container(by default placed after the page breadcrumbs)
                                place: "prepend", // append or prepent in container
                                type: "success",  // alert's type
                                message: "La información se guardó correctamente.",  // alert's message
                                close: 1, // make alert closable
                                reset: 1, // close all previouse alerts first
                                focus: 1, // auto scroll to the alert after shown
                                closeInSeconds: 5,//, // auto close after defined seconds
                                icon: "fa fa-success" // put icon before the message
                            });
                        },
                        error: function (jqXHR, textStatus, errorThrown) {
                            switch (jqXHR.status) {
                                case 409:
                                    App.alert({
                                        container: "#bootstrap_alerts_instrumentos", // alerts parent container(by default placed after the page breadcrumbs)
                                        place: "prepend", // append or prepent in container
                                        type: "danger",  // alert's type
                                        message: "Ya existe el instrumento en la subestación.",  // alert's message
                                        close: 1, // make alert closable
                                        reset: 1, // close all previouse alerts first
                                        focus: 1, // auto scroll to the alert after shown
                                        closeInSeconds: 5,//, // auto close after defined seconds
                                        icon: "fa fa-danger" // put icon before the message
                                    });
                                    break;
                                case 400:
                                    App.alert({
                                        container: "#bootstrap_alerts_instrumentos", // alerts parent container(by default placed after the page breadcrumbs)
                                        place: "prepend", // append or prepent in container
                                        type: "danger",  // alert's type
                                        message: "Ocurrió un error al insertar el circuito.",  // alert's message
                                        close: 1, // make alert closable
                                        reset: 1, // close all previouse alerts first
                                        focus: 1, // auto scroll to the alert after shown
                                        closeInSeconds: 5,//, // auto close after defined seconds
                                        icon: "fa fa-danger" // put icon before the message
                                    });
                                    break;
                                default:
                            }
                            //commit(false);
                        }
                    });

                }
            });


            $("#form").submit(function () {
                $("#codSub").removeAttr('disabled');
                $("#Sub_MBE_TipoMtto").removeAttr('disabled');
                $("#Sub_MBE_RealizadoPor").removeAttr('disabled');
                $("#Sub_MBE_fechaMtto").removeAttr('disabled');

                $(".id_MBE").each(function (indice, valuie) { $(this).val(idMBE); }); //Valores a enviar
                $(".id_B").each(function (indice, valuie) { $(this).val(idB); });
                $(".ea_red").each(function (indice, valuie) { $(this).val(ea_red); });
                $(".sub").each(function (indice, valuie) { $(this).val(sub); });
                $('#Sub_MBE_fechaMtto').val(finalFecha);
                $("#Sub_MBEI_Id_InstrumentoMedicion option:selected").val(10);
                return true;
            });

        });
    </script>

    <script src="~/Scripts/js/jsTablaInstrumentosBateriasEstacionarias.js"></script>
}