@model IEnumerable<Subestaciones.Models.Clases.Sub_Celaje_Sub_TransViewModel>


<table id="datatable" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Subestaci&oacute;n</th>
            <th>Tipo de Inspección</th>
            <th>RealizadoaPor</th>
            <th>Fecha</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            string llaves = item.NombreCelaje + "|" + item.CodigoSub + "|" + item.fecha;

        <tr>
            <td>
                @item.CodigoSub,@item.NombreSub

            </td>

            <td>
                @item.NombreCelaje
            </td>
            <td>
                @item.RealizadoPor
            </td>

            <td>
                @item.fecha
            </td>
            <td style="width: 125px;">
                <a href="@Url.Action("Details","Sub_CelajeSubTrans", new {nombInsp= item.NombreCelaje, codigo = item.CodigoSub , fechaIns = item.fecha  } )" class="btn btn-info mt-sweetalert btn-xs" title="Detalles"><i class="fa fa-eye"></i>  </a>
                <a href="@Url.Action("Edit","Sub_CelajeSubTrans", new {nombInsp= item.NombreCelaje, codigo = item.CodigoSub , fechaIns = item.fecha  } )" class="btn btn-warning mt-sweetalert btn-xs" title="Editar"><i class="fa fa-pencil"></i>  </a>
                <a href="javascript:;" id="@llaves" title="Eliminar" 
                   class="btn btn-default mt-sweetalert btn-xs" 
                   data-title="¿Est&aacute; seguro de eliminar la inspecci&oacute;n seleccionada?" 
                   data-message="¡Los valores que est&aacute;n en la fila a eliminar no se podr&aacute;n recuperar!"
                   data-type="info" data-show-confirm-button="true" 
                   data-confirm-button-class="btn-success" 
                   data-show-cancel-button="true" 
                   data-cancel-button-class="btn-default" 
                   data-close-on-confirm="false" 
                   data-close-on-cancel="false"
                   data-confirm-button-text='¡S&iacute;, eliminar!' 
                   data-cancel-button-text='¡No, cancelar!' 
                   data-popup-title-success="¡Eliminado!" 
                   data-popup-message-success="La inspecci&oacute;n ha sido eliminada." 
                   data-popup-title-cancel="Cancelado"
                   data-popup-message-cancel="La acci&oacute;n de eliminar ha sido cancelada."><i class="fa fa-trash-o"></i></a>

            </td>


        </tr>
        }

    </tbody>
</table>

