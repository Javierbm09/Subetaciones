@model Subestaciones.Models.Clases.Sub_InspAspectosSubTransViewModel

@{
    ViewBag.Title = "Editar Sub Inspención Aspectos Subestación de Transmición ";
}

<!-- END PAGE HEAD-->
<!-- BEGIN PAGE CONTENT BODY -->
<div class="page-content">
    <div class="container-fluid">
        <!-- BEGIN PAGE BREADCRUMBS -->
        <ul class="page-breadcrumb breadcrumb">
            <li>
                <a href="@Url.Action("Index","Sub_CelajeSubTrans")">Lista sub inspeción aspectos subestación de transmición</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <span>Editar </span>
            </li>
        </ul>
        <!-- END PAGE BREADCRUMBS -->
        <!-- BEGIN PAGE CONTENT INNER -->
        <div class="page-content-inner">
            <div class="row">
                <div class="col-md-12">
                    <div class="portlet box blue">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="fa fa-binoculars"></i>Editar sub celaje subestación de transmición
                            </div>
                        </div>
                        <div class="portlet-body form">
                            @using (Html.BeginForm("EditAspecto", "Sub_CelajeSubTrans", FormMethod.Post, new { enctype = "multipart/form-data", @id = "form" }))

                            {
                                @Html.ValidationSummary(false)
                                @Html.AntiForgeryToken()
                                @Html.Hidden("nombreCelajeAnterior", Model.NombreCelaje)
                                @Html.HiddenFor(model => model.Aspecto, Model.Aspecto)

                                <!-- BEGIN FORM-->
                                <div class="horizontal-form">
                                    <div class="form-body">

                                        <div class="tabbable-line boxless tabbable-reversed ">
                                            <ul class="nav nav-tabs">
                                                <li class="active">
                                                    <a href="#tab_1" data-toggle="tab" id="tab1">Celaje Subestación de Transmición general</a>
                                                </li>
                                            </ul>
                                            <div class="tab-content">
                                                <div class="tab-pane active" id="tab_1">

                                                    <div class="panel">
                                                        <div class="panel-heading">Datos de Celaje Subestación de Transmición</div>
                                                        <div class="panel-body">
                                                            <div class="col-md-3">
                                                                <div class="form-group">
                                                                    @Html.LabelFor(model => model.CodigoSub, htmlAttributes: new { @class = "control-label" })
                                                                    @Html.EditorFor(model => model.CodigoSub, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                                </div>
                                                            </div>
                                                            <div class="col-md-3">
                                                                <div class="form-group">
                                                                    @Html.LabelFor(model => model.NombreCelaje, htmlAttributes: new { @class = "control-label" })
                                                                    @Html.EditorFor(model => model.NombreCelaje, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                                </div>
                                                            </div>
                                                            <div class="col-md-3">
                                                                @Html.LabelFor(model => model.fecha, htmlAttributes: new { @class = "control-label" })

                                                                <div class="input-group date" id="fechahora">
                                                                    @Html.EditorFor(model => model.fecha, new { htmlAttributes = new { @class = "form-control", @id = "fechaSubCelaje", @readonly = "readonly" } })
                                                                    <span class="input-group-addon btn blue tooltips" disabled id="inspfechahora" data-original-title="Seleccionar fecha">
                                                                        <span class="fa fa-calendar"></span>
                                                                    </span>
                                                                </div>
                                                                @Html.HiddenFor(model => model.fecha)

                                                            </div>

                                                        </div>
                                                        <div class="panel">
                                                            <div class="panel-heading">Modificar aspecto @Model.NombreAspecto del celaje</div>
                                                            <div class="panel-body">
                                                                <div class="col-md-3">
                                                                    <div class="form-group">
                                                                        @Html.LabelFor(model => model.NombreAspecto, htmlAttributes: new { @class = "control-label" })
                                                                        @Html.EditorFor(model => model.NombreAspecto, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                                    </div>
                                                                </div>
                                                                <div class="col-md-3">
                                                                    <div class="form-group">
                                                                        @Html.LabelFor(model => model.Defecto, htmlAttributes: new { @class = "control-label" })
                                                                        @Html.DropDownListFor(model => model.Defecto, ViewBag.defecto as IEnumerable<SelectListItem>,
    "Seleccione un elemento de la lista", htmlAttributes: new { @class = "form-control select2" })
                                                                    </div>
                                                                </div>
                                                                <div class="col-md-6">
                                                                    <div class="form-group">
                                                                        <label class="control-label " for="observaciones">Observaciones</label>
                                                                        <textarea class="form-control" cols="20" data-val="true" data-val-length="El campo Observaciones debe ser una cadena con una longitud máxima de 750." data-val-length-max="750" id="observaciones" name="observaciones" rows="2"></textarea>
                                                                        <span class="field-validation-valid text-danger" data-valmsg-for="observaciones" data-valmsg-replace="true"></span>
                                                                    </div>
                                                                </div>

                                                            </div>


                                                        </div>
                                                    </div>

                                                    <div class="form-actions right">
                                                        <a class="btn btn-primary" href="@Url.Action("Edit","Sub_CelajeSubTrans",new {nombInsp = ViewBag.nomb, codigo = ViewBag.codSub, fecha = ViewBag.fechaInsp})"><i class="fa fa-close"></i> Cancelar</a>
                                                        <button type="submit" class="btn blue">
                                                            <i class="fa fa-plus"></i> Guardar
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            }
                            <!-- END FORM-->
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <!-- END PAGE CONTENT INNER -->

    </div>
</div>
<!-- END PAGE CONTENT BODY -->
<!-- END CONTENT BODY -->

