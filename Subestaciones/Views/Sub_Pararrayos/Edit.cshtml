    <script>
        $(document).ready(function () {
            inicializar_select2();

                $('.datepicker').datepicker({
                    todayHighlight: true,
                    todayBtn: "linked",
                    language: "es",
                    dateFormat: 'dd/mm/yyyy',
                    autoclose: true
                }).datepicker();

            function inicializar_select2() {
                $(".select2").select2({
                    placeholder: "Seleccione un elemento de la lista"
                });
            }

        $("#TequipoProt").change(function () {
            cargarTEquipo();
        });

        $("#Codigo").change(function () {
            cargarTEquipo();
        });

        function cargarTEquipo() {

            var TE = $("#TequipoProt").val();
            var sub = $("#Codigo").val();
            if (TE != "" && sub != "") {
                $.ajax({
                    url: '@Url.Action("CargarEquipo", "Sub_Pararrayos")',
                    method: "POST",
                    data: { tipoequipo: TE,codsub: sub },
                    success: function (data) {
                        $('#cargarEquipo').html(data);
                        $(".select2_single").select2({
                            placeholder: "Seleccione un elemento de la lista",
                            allowClear: true
                        });
                    }
                });
            }
        }

});
    </script>
