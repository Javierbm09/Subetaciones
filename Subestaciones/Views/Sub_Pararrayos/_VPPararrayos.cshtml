@model IEnumerable<Subestaciones.Models.Clases.Pararrayos>
<table id="datatable" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Subestaci&oacute;n</th>
            <th>Tipo de equipo</th>
            <th>Pararrayo</th>
            <th>Fase</th>
            <th>Fabricante</th>
            <th>Tensi&oacute;n nominal (kV)</th>
            <th>No serie</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            string llaves = item.Id_EAdministrativa + "|" + item.Id_pararrayo;

        <tr>

            <td>
                @item.NombreSub
            </td>

            <td>
                @item.TipoEquipoProteg
            </td>

            <td>
                @item.Codigo
            </td>
            <td>
                @item.Fase
            </td>
            <td>
                @item.Fabricante
            </td>
            <td>
                @item.tension
            </td>

            <td>
                @item.NumeroSerie
            </td>

            <td style="width: 125px;">
                <a href="@Url.Action("Details","Sub_Pararrayos", new { EA = item.Id_EAdministrativa , id_para = item.Id_pararrayo  } )" class="btn btn-info mt-sweetalert btn-xs" title="Detalles"><i class="fa fa-eye"></i>  </a>
                <a href="@Url.Action("Edit","Sub_Pararrayos", new { EA = item.Id_EAdministrativa , id_para = item.Id_pararrayo } )" class="btn btn-warning mt-sweetalert btn-xs" title="Editar"><i class="fa fa-pencil"></i>  </a>
                <a href="javascript:;" id="@llaves" title="Eliminar" class="btn btn-default mt-sweetalert btn-xs" data-title="¿Est&aacute; seguro de eliminar el pararrayos seleccionado?" data-message="¡Los valores que est&aacute;n en la fila a eliminar no se podr&aacute;n recuperar!"
                   data-type="info" data-show-confirm-button="true" data-confirm-button-class="btn-success" data-show-cancel-button="true" data-cancel-button-class="btn-default" data-close-on-confirm="false" data-close-on-cancel="false"
                   data-confirm-button-text='¡S&iacute;, eliminar!' data-cancel-button-text='¡No, cancelar!' data-popup-title-success="¡Eliminado!" data-popup-message-success="El pararrayos ha sido eliminado." data-popup-title-cancel="Cancelado"
                   data-popup-message-cancel="La acci&oacute;n de eliminar ha sido cancelada."><i class="fa fa-trash-o"></i></a>


            </td>
        </tr>
        }

    </tbody>
</table>

