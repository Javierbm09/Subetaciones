@model IEnumerable<Subestaciones.Models.NomencladorBaterias>

<table id="datatable" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Modelo de Bater&iacute;as</th>
            <th>Capacidad</th>
            <th>Tensi&oacute;n Nominal</th>
            <th>Tipo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoBateria)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CapacidadBateria)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TensionBateria)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClaseBateria)
                </td>
                <td style="width: 125px;">
                    <a href="@Url.Action("Details","NomencladorBaterias", new { id = item.IdBateria } )" class="btn btn-info mt-sweetalert btn-xs" title="Detalles"><i class="fa fa-eye"></i>  </a>
                    <a href="@Url.Action("Edit","NomencladorBaterias", new { id = item.IdBateria } )" class="btn btn-warning mt-sweetalert btn-xs" title="Editar"><i class="fa fa-pencil"></i>  </a>
                    <a href="javascript:;" id="@item.IdBateria" title="Eliminar" class="btn btn-default mt-sweetalert btn-xs" data-title="¿Está seguro de eliminar el tipo de bater&iacute;a @item.TipoBateria?" data-message="¡Los valores que están en la fila a eliminar no se podrán recuperar!"
                       data-type="info" data-show-confirm-button="true" data-confirm-button-class="btn-success" data-show-cancel-button="true" data-cancel-button-class="btn-default" data-close-on-confirm="false" data-close-on-cancel="false"
                       data-confirm-button-text='¡Sí, eliminar!' data-cancel-button-text='¡No, cancelar!' data-popup-title-success="¡Eliminado!" data-popup-message-success="El tipo de bater&iacute;a @item.TipoBateria ha sido eliminado." data-popup-title-cancel="Cancelado"
                       data-popup-message-cancel="La acción de eliminar ha sido cancelada."><i class="fa fa-trash-o"></i></a>

                </td>
            </tr>
        }
    </tbody>
</table>