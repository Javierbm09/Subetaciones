@model IEnumerable<Subestaciones.Models.Clases.InspSubDist>


<table id="datatable" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Subestaci&oacute;n</th>
            <th>Tipo inspecci&oacute;n</th>
            <th>Realizado por</th>
            <th>Fecha</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            string llaves = item.nombreCelaje + "|" + item.codigoSub + "|" + item.fecha;

            <tr>


                <td>
                    @item.codigoSub, @item.nombreSub

                </td>

                <td>
                    @item.nombreCelaje
                </td>
                <td>
                    @item.realizadoPor
                </td>
                <td>
                    @item.fecha
                </td>


                <td style="width: 125px;">
                    <a href="@Url.Action("Details","Sub_CelajeSubDistribucion", new {nombInsp= item.nombreCelaje, codigo = item.codigoSub , fechaIns = item.fecha  } )" class="btn btn-info mt-sweetalert btn-xs" title="Detalles"><i class="fa fa-eye"></i>  </a>
                    <a href="@Url.Action("Edit","Sub_CelajeSubDistribucion", new {nombInsp= item.nombreCelaje, codigo = item.codigoSub , fechaIns = item.fecha } )" class="btn btn-warning mt-sweetalert btn-xs" title="Editar"><i class="fa fa-pencil"></i>  </a>
                    <a href="javascript:;" id="@llaves" title="Eliminar" class="btn btn-default mt-sweetalert btn-xs" data-title="¿Est&aacute; seguro de eliminar la inspecci&oacute;n seleccionada?" data-message="¡Los valores que est&aacute;n en la fila a eliminar no se podr&aacute;n recuperar!"
                       data-type="info" data-show-confirm-button="true" data-confirm-button-class="btn-success" data-show-cancel-button="true" data-cancel-button-class="btn-default" data-close-on-confirm="false" data-close-on-cancel="false"
                       data-confirm-button-text='¡S&iacute;, eliminar!' data-cancel-button-text='¡No, cancelar!' data-popup-title-success="¡Eliminado!" data-popup-message-success="La inspecci&oacute;n ha sido eliminada." data-popup-title-cancel="Cancelado"
                       data-popup-message-cancel="La acci&oacute;n de eliminar ha sido cancelada."><i class="fa fa-trash-o"></i></a>

                </td>


            </tr>
        }

    </tbody>
</table>

