@model IEnumerable<Subestaciones.Models.Clases.SubestacionesDistribucion>

<table id="datatable" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>C&oacute;digo</th>
            <th>C&oacute;digo antiguo</th>
            <th>Tipo subestaci&oacute;n</th>
            <th>Nombre</th>
            <th>Cantidad Salidas</th>
            <th>Tipo tercero</th>
            <th>Esquema por alta</th>
            <th>Estado operativo</th>
            <th>Tensi&oacute;n nominal</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            //string llaves = item.Id_EAdministrativa + "|" + item.Id_Transformador;

        <tr>
            <td>
                @item.Codigo
            </td>

            <td>
                @item.CodigoAntiguo
            </td>

            <td>
                @item.TipoSubestacion
            </td>
            <td>
                @item.NombreSubestacion
            </td>
            <td>
                @item.NumeroSalidas
            </td>

            <td>
                @item.TipoTercero
            </td>
            <td>
                @item.EsquemaAlta
            </td>
            <td>
                @item.EstadoOperativo
            </td>

            <td>
                @item.VoltajeNominal
            </td>

            <td style="width: 125px;">
                <a href="@Url.Action("Details","SubestacionesD", new { codigo = item.Codigo } )" class="btn btn-info  mt-sweetalert btn-xs" title="Detalles"><i class="fa fa-eye"></i>  </a>
                <a href="@Url.Action("Edit","SubestacionesD", new { codigo = item.Codigo, inserta = "No"} )" class="btn btn-warning  mt-sweetalert btn-xs" title="Editar"><i class="fa fa-pencil"></i>  </a>
                <a href="javascript:;" id="@item.Codigo" title="Eliminar" class="btn btn-default mt-sweetalert btn-xs" data-title="¿Est&aacute; seguro de eliminar la subestaci&oacute;n @item.Codigo?" data-message="¡Los valores que están en la fila a eliminar no se podr&aacute;n recuperar!"
                   data-type="info" data-show-confirm-button="true" data-confirm-button-class="btn-success" data-show-cancel-button="true" data-cancel-button-class="btn-default" data-close-on-confirm="false" data-close-on-cancel="false"
                   data-confirm-button-text='¡S&iacute;, eliminar!' data-cancel-button-text='¡No, cancelar!' data-popup-title-success="¡Eliminado!" data-popup-message-success="La subestaci&oacute;n @item.Codigo ha sido eliminada." data-popup-title-cancel="Cancelado"
                   data-popup-message-cancel="La acción de eliminar ha sido cancelada."><i class="fa fa-trash-o"></i></a>

            </td>
        </tr>
        }

    </tbody>
</table>
