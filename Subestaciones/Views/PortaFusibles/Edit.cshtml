                                        <div class="portlet-title">
                                            <div class="caption">
                                                <span class="caption-subject bold">Datos del fusible</span>
                                            </div>
                                        </div>
                                        <div class="portlet-body">
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.Id_Fusible, htmlAttributes: new { @class = "control-label" })
                                                    @*@Html.DropDownList("Subestacion", null, "", htmlAttributes: new { @class = "select2_single form-control" })*@
                                                    @Html.DropDownListFor(model => model.Id_Fusible, ViewBag.tipoFusible as SelectList,
"Seleccione un elemento de la lista", htmlAttributes: new { @class = "form-control select2" })
