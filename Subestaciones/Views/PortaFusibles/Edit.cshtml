                                                    @Html.LabelFor(model => model.Id_VoltajeN, htmlAttributes: new { @class = "control-label" })
                                                    @*@Html.DropDownList("Subestacion", null, "", htmlAttributes: new { @class = "select2_single form-control" })*@
                                                    @Html.DropDownListFor(model => model.Id_VoltajeN, ViewBag.tension as SelectList,
"Seleccione un elemento de la lista", htmlAttributes: new { @class = "form-control select2" })
                                                    @*@Html.ValidationMessageFor(model => model.Subestacion, "", new { @class = "text-danger" })*@
                                                </div>
                                            </div>
                                            <div class="col-md-2">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.CapacidadFusible, htmlAttributes: new { @class = "control-label" })
                                                    @*@Html.DropDownList("Subestacion", null, "", htmlAttributes: new { @class = "select2_single form-control" })*@
