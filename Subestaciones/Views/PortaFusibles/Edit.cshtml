                                    <div class="col-md-2">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.CodigoPortafusible, htmlAttributes: new { @class = "control-label" })
                                            @Html.EditorFor(model => model.CodigoPortafusible, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.TipoFuse, htmlAttributes: new { @class = "control-label" })
                                            @*@Html.DropDownList("Subestacion", null, "", htmlAttributes: new { @class = "select2_single form-control" })*@
                                            @Html.DropDownListFor(model => model.TipoFuse, ViewBag.tipoPortafusibleLista as SelectList,
"Seleccione un elemento de la lista", htmlAttributes: new { @class = "form-control select2" })
                                            @*@Html.ValidationMessageFor(model => model.Subestacion, "", new { @class = "text-danger" })*@
                                        </div>
                                    </div>
                                    </div>
                                <div class="row">
                                    <!-- BEGIN Portlet PORTLET DATOS del fusible-->
