@model IEnumerable<Subestaciones.Models.ES_TP_Devanado>

@{
    ViewBag.Title = "Insertar devanados del TC";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="panel-body panel-bordered-default">
        <div class="panel-heading">
            <h3 class="panel-title"><b>Insertar devanados del TP @ViewBag.NroSerie</b></h3>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @{
            for (var i = 0; i < ViewBag.Cant; i++)
            {

                var dev = i + 1;
                var nameTV = "NroSerie" + @i;
                var Nro_Dev = "Nro_Dev" + @i;
                var Capacidad = "Capacidad" + @i;
                var tension = "Tension" + @i;
                var Clase_Precision = "Clase_Precision" + @i;
                var Designacion = "Designacion" + @i;
                <div class="row">
                    <div class="form-group">

                        <input type="text" id="@nameTV" name="@nameTV" value="@ViewBag.NroSerie" class="form-control" style="visibility:hidden" />
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label>Devanado</label>
                            <input type="text" id="@Nro_Dev" name="@Nro_Dev" value="@dev" readonly class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label>Tensión (V)</label>
                            @Html.DropDownList(@tension, ViewBag.tension as SelectList, htmlAttributes: new { @class = "select2_single form-control" })
                            @*<select type="text" id="@tension" name="@tension" class="form-control" />*@
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label>Capacidad (VA)</label>
                            <input type="text" id="@Capacidad" name="@Capacidad" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label">Clase Precisión</label>
                            <input type="text" id="@Clase_Precision" name="@Clase_Precision" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label">Designación </label>
                            <input type="text" id="@Designacion" name="@Designacion" class="form-control" />
                        </div>
                    </div>
                </div>


            }
        }

        <div class="row">
            <div class="col-sm-12">
                <button type="submit" class="btn btn-success"><i class="fa fa-plus"></i> Insertar devanados</button>
                <a class="btn btn-default" href="@Url.Action("Index","ES_TransformadorPotencial")"><i class="fa fa-list"></i> Listado de TP</a>
            </div>
        </div>


    </div>
}
@section script {
    <script src="@Url.Content("~/Scripts/custom/select2.js")"></script>
    <script>
        $(document).ready(function () {
            $(".select2_single").val(null).trigger("change");
        })
    </script>
    }