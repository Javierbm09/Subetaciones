@model List<Subestaciones.Models.Clases.Termografias>

<table id="datatable" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Subestaci&oacute;n</th>
            <th>Fecha</th>
            <th>Carga de la subestaci&oacute;n(MVA)</th>
            <th>Temperatura ambiente(C)</th>
            <th>Ejecutado por</th>
            <th>Cantidad de puntos calientes</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            string llaves = item.idEA + "|" + item.numA;

        <tr>
            <td>
              @item.sub,  @item.subNomb
                <input type="hidden" id="idEAdm" value="@item.idEA" />
                <input type="hidden" id="numA" value="@item.numA" />
            </td>

            <td>
                @item.Fecha
            </td>

            <td>
                @item.TransfLinea
            </td>
            <td>
                @item.TempAmbiente
            </td>
            <td>
                @item.EjecutadoPor
            </td>

            <td>
                @item.puntos
            </td>
            <td style="width: 125px;">
                <a href="@Url.Action("Details","Sub_Termografias", new { EA = item.idEA , numAccion = item.numA  } )" class="btn btn-info mt-sweetalert btn-xs" title="Detalles"><i class="fa fa-eye"></i>  </a>
                <a href="@Url.Action("Edit","Sub_Termografias", new { EA = item.idEA , numAccion = item.numA } )" class="btn btn-warning mt-sweetalert btn-xs" title="Editar"><i class="fa fa-pencil"></i>  </a>
                <a href="javascript:;" id="@llaves" title="Eliminar" class="btn btn-default mt-sweetalert btn-xs" data-title="¿Est&aacute; seguro de eliminar la termograf&iacute;a seleccionada?" data-message="¡Los valores que est&aacute;n en la fila a eliminar no se podr&aacute;n recuperar!"
                   data-type="info" data-show-confirm-button="true" data-confirm-button-class="btn-success" data-show-cancel-button="true" data-cancel-button-class="btn-default" data-close-on-confirm="false" data-close-on-cancel="false"
                   data-confirm-button-text='¡S&iacute;, eliminar!' data-cancel-button-text='¡No, cancelar!' data-popup-title-success="¡Eliminado!" data-popup-message-success="La termograf&iacute;a ha sido eliminada." data-popup-title-cancel="Cancelado"
                   data-popup-message-cancel="La acci&oacute;n de eliminar ha sido cancelada."><i class="fa fa-trash-o"></i></a>

            </td>


        </tr>
        }

    </tbody>
</table>
