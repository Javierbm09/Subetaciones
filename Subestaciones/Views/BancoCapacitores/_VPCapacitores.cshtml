
@model IEnumerable<Subestaciones.Models.Clases.Capacitores>

<table id="datatable" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>C&oacute;digo del banco</th>
            <th>C&oacute;digo antiguo</th>
            <th>Subestaci&oacute;n</th>
            <th>Seccionalizador</th>
            <th>Estado operactivo</th>
            <th>Tipo de control</th>
            <th>CKVAR instalado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>

            <td>
                @item.codigobanco
            </td>
            <td>
                @item.codigoantiguo
            </td>

            <td>
                @item.NombreSub
            </td>
            <td>
                @item.secc
            </td>
            <td>
                @item.EO
            </td>
            <td>
                @item.tipocontrol
            </td>
            <td>
                @item.CKVAR_Instalado
            </td>

            <td style="width: 125px;">
                <a href="@Url.Action("Details","BancoCapacitores", new { Codigo = item.codigobanco} )" class="btn btn-info mt-sweetalert btn-xs" title="Detalles"><i class="fa fa-eye"></i>  </a>
                <a href="@Url.Action("Edit","BancoCapacitores", new { Codigo = item.codigobanco} )" class="btn btn-warning mt-sweetalert btn-xs" title="Editar"><i class="fa fa-pencil"></i>  </a>
                <a href="javascript:;" id="@item.codigobanco" title="Eliminar" class="btn btn-default mt-sweetalert btn-xs" data-title="¿Est&aacute; seguro de eliminar el banco de capacitores @item.codigobanco?" data-message="¡Los valores que est&aacute;n en la fila a eliminar no se podr&aacute;n recuperar!"
                   data-type="info" data-show-confirm-button="true" data-confirm-button-class="btn-success" data-show-cancel-button="true" data-cancel-button-class="btn-default" data-close-on-confirm="false" data-close-on-cancel="false"
                   data-confirm-button-text='¡S&iacute;, eliminar!' data-cancel-button-text='¡No, cancelar!' data-popup-title-success="¡Eliminado!" data-popup-message-success="El banco de capacitores @item.codigobanco ha sido eliminado." data-popup-title-cancel="Cancelado"
                   data-popup-message-cancel="La acci&oacute;n de eliminar ha sido cancelada."><i class="fa fa-trash-o"></i></a>

            </td>
        </tr>
        }

    </tbody>
</table>