<!-- END PAGE HEAD-->
<!-- BEGIN PAGE CONTENT BODY -->
<div class="page-content">
    <div class="container-fluid">
        <!-- BEGIN PAGE BREADCRUMBS -->
        <ul class="page-breadcrumb breadcrumb">
            <li>
                <a href="@Url.Action("Index","BancoCapacitores")">Bancos de capacitores </a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <span>Editar</span>
            </li>
        </ul>
        <!-- END PAGE BREADCRUMBS -->
        <!-- BEGIN PAGE CONTENT INNER -->
        <div class="page-content-inner">
            <div class="row">
                <div class="col-md-12">

                    <div class="portlet box blue">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="fa fa-gift"></i>Editar banco de capacitores "@Html.DisplayFor(model => model.Codigo)"
                            </div>
                        </div>
                        <div class="portlet-body form">
                            @using (Html.BeginForm())
                            {


                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.AntiForgeryToken()
                                @Html.Hidden("CodigoAnterior", Model.Codigo)

                                <!-- BEGIN FORM-->

                                <div class="horizontal-form">
                                    <div class="form-body">

                                        <div class="row" style="display:none">
                                            @Html.ValidationMessageFor(model => model.Circuito, "", new { @class = "text-danger" })
                                            @Html.ValidationMessageFor(model => model.Codigo, "", new { @class = "text-danger" })
                                            @Html.ValidationMessageFor(model => model.Seccionalizador, "", new { @class = "text-danger" })

                                        </div>

                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.Circuito, htmlAttributes: new { @class = "control-label" })
                                                    @Html.DropDownListFor(model => model.Circuito, ViewBag.CircuitoList as SelectList,
"Seleccione un elemento de la lista", htmlAttributes: new { @class = "form-control select2" })
                                                    @* @Html.ValidationMessageFor(model => model.Circuito, "", new { @class = "text-danger" })*@
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.Codigo, htmlAttributes: new { @class = "control-label" })
                                                    @Html.EditorFor(model => model.Codigo, new { htmlAttributes = new { @class = "form-control" } })
                                                    @*  @Html.ValidationMessageFor(model => model.Codigo, "", new { @class = "text-danger" })*@
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.CodigoAntiguo, htmlAttributes: new { @class = "control-label" })
                                                    @Html.EditorFor(model => model.CodigoAntiguo, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.CodigoAntiguo, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>


                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group" id="cargarSecc">
                                                    @Html.LabelFor(model => model.Seccionalizador, htmlAttributes: new { @class = "control-label" })
                                                    @Html.DropDownListFor(model => model.Seccionalizador, ViewBag.Secc as SelectList,
"Seleccione un elemento de la lista", htmlAttributes: new { @class = "form-control select2" })
                                                </div>
                                            </div>

                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.TipoControl, htmlAttributes: new { @class = "control-label" })
                                                    @Html.DropDownList("TipoControl", null, "", htmlAttributes: new { @class = "form-control select2" })
                                                    @Html.ValidationMessageFor(model => model.TipoControl, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.CKVAR_Instalado, htmlAttributes: new { @class = "control-label" })
                                                    @Html.EditorFor(model => model.CKVAR_Instalado, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.CKVAR_Instalado, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.EstadoOperativo, htmlAttributes: new { @class = "control-label" })
                                                    @Html.DropDownList("EstadoOperativo", null, "", htmlAttributes: new { @class = "form-control select2" })
                                                    @Html.ValidationMessageFor(model => model.EstadoOperativo, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.FechaInstalado, htmlAttributes: new { @class = "control-label" })
                                                    @Html.EditorFor(model => model.FechaInstalado, new { htmlAttributes = new { @class = "form-control datepicker" } })
                                                    @Html.ValidationMessageFor(model => model.FechaInstalado, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-actions right">
                                            <a class="btn btn-primary" href="@Url.Action("Index","BancoCapacitores")"><i class="fa fa-list"></i>Listado de bancos de capacitores</a>
                                            <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Guardar</button>
                                        </div>
                                    </div>
                                </div>
                            }
                            <!-- END FORM-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END PAGE CONTENT INNER -->
    </div>
</div>
<!-- END PAGE CONTENT BODY -->
<!-- END CONTENT BODY -->
