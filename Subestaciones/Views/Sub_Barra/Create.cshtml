@model Subestaciones.Models.Sub_Barra


@{
    ViewBag.Title = "Barras";
}

@*@section pagetitle{
        <div class="page-title">
            <h1>Insertar banco de capacitor</h1>
        </div>
    }*@


<!-- END PAGE HEAD-->
<!-- BEGIN PAGE CONTENT BODY -->
<div class="page-content">
    <div class="container-fluid">
        <!-- BEGIN PAGE BREADCRUMBS -->
        <ul class="page-breadcrumb breadcrumb">
            <li>
                <a href="@Url.Action("Index","Sub_Barra")">Lista de barras</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <span>Insertar</span>
            </li>
        </ul>
        <!-- END PAGE BREADCRUMBS -->
        <!-- BEGIN PAGE CONTENT INNER -->
        <div class="page-content-inner">
            <div class="row">
                <div class="col-md-12">

                    <div class="portlet box blue">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="ti-stats-down"></i>Insertar barra
                            </div>
                        </div>
                        <div class="portlet-body form">

                            @using (Html.BeginForm())
                            {
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                @Html.AntiForgeryToken()

                                <!-- BEGIN FORM-->

                                <div class="horizontal-form">
                                    <div class="form-body">
                                        <div class="row" style="display:none">
                                            @Html.ValidationMessageFor(model => model.Subestacion, "", new { @class = "text-danger" })
                                            @Html.ValidationMessageFor(model => model.codigo, "", new { @class = "text-danger" })
                                            @Html.ValidationMessageFor(model => model.Conductor, "", new { @class = "text-danger" })

                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.Subestacion, htmlAttributes: new { @class = "control-label" })
                                                    @*@Html.DropDownList("Subestacion", null, "", htmlAttributes: new { @class = "select2_single form-control" })*@
                                                    @Html.DropDownListFor(model => model.Subestacion, ViewBag.ListaSub as SelectList,
"Seleccione un elemento de la lista", htmlAttributes: new { @class = "form-control select2" })
                                                    @*@Html.ValidationMessageFor(model => model.Subestacion, "", new { @class = "text-danger" })*@
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.codigo, htmlAttributes: new { @class = "control-label" })
                                                    @Html.EditorFor(model => model.codigo, new { htmlAttributes = new { @class = "form-control" } })
                                                    @*@Html.ValidationMessageFor(model => model.codigo, "", new { @class = "text-danger" })*@
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group ">

                                                    @Html.LabelFor(model => model.Conductor, htmlAttributes: new { @class = "control-label" })
                                                    <div class="form-inline">
                                                        @Html.EditorFor(model => model.Conductor, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                        @*<button data-target="#demo-modal-wo-anim" data-toggle="modal" class="form-control">
                                                                <span class="ti-search"></span>
                                                            </button>*@<a class="btn blue btn-outline sbold" href="#basic" data-toggle="modal">Conductores </a>

                                                        @*@Html.ValidationMessageFor(model => model.Conductor, "", new { @class = "text-danger" })*@
                                                    </div>

                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class=" form-group">
                                                    @Html.LabelFor(model => model.ID_Voltaje, htmlAttributes: new { @class = "control-label " })
                                                    @Html.DropDownList("ID_Voltaje", null, "", htmlAttributes: new { @class = "form-control select2" })
                                                    @Html.ValidationMessageFor(model => model.ID_Voltaje, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.corriente, htmlAttributes: new { @class = "control-label" })
                                                    @Html.EditorFor(model => model.corriente, new { htmlAttributes = new { @class = "form-control", type = "number" } })
                                                    @Html.ValidationMessageFor(model => model.corriente, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.CantidadCond, htmlAttributes: new { @class = "control-label" })
                                                    @Html.EditorFor(model => model.CantidadCond, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.CantidadCond, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>


                                        <div class="form-actions right">
                                            <a class="btn btn-primary" href="@Url.Action("Index","Sub_barra")"><i class="fa fa-list"></i> Listado de barras</a>
                                            <button type="submit" class="btn btn-success"><i class="fa fa-plus"></i> Guardar</button>
                                        </div>
                                    </div>
                                </div>
                            }

                            @*@*<div class="modal fade" id="demo-default-modal" role="dialog" tabindex="-1" aria-labelledby="demo-default-modal" aria-hidden="true">
                                <*@

                            <div class="modal" id="basic" role="dialog" tabindex="-1" aria-labelledby="demo-default-modal" aria-hidden="true" style="display: none;">
                                <div class="modal-dialog modal-lg">
                                    <div class="modal-content">

                                        <!--Modal header-->
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal"><i class="pci-cross pci-circle"></i></button>
                                            <h4 class="modal-title">Conductores</h4>
                                        </div>


                                        <!--Modal body-->
                                        <div class="modal-body">
                                            <table class="table" id="tabla_conductores" style="cursor:pointer">
                                                <thead>
                                                    <tr>
                                                        <th>
                                                            C&oacute;digo conductor
                                                        </th>
                                                        <th>
                                                            Tipo conductor
                                                        </th>
                                                        <th>
                                                            Material
                                                        </th>
                                                        <th>
                                                            Calibre
                                                        </th>
                                                        <th>
                                                            Recubrimiento
                                                        </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in ViewBag.Conductor)
                                                    {
                                                        <tr>

                                                            <td>
                                                                <input type="hidden" value=@item.codigo id="Codigo">
                                                                @item.codigo
                                                            </td>
                                                            <td>
                                                                @item.TCond
                                                            </td>
                                                            <td>
                                                                @item.material
                                                            </td>
                                                            <td>
                                                                @item.calibre
                                                            </td>
                                                            <td>
                                                                @item.recubrimiento
                                                            </td>
                                                        </tr>
                                                    }

                                                </tbody>

                                            </table>
                                        </div>


                                        <!--Modal footer-->
                                        <div class="modal-footer">
                                            <button class="btn btn-primary" type="button" id="Seleccionar">Seleccionar</button>
                                            <button data-dismiss="modal" class="btn btn-default" type="button" id="cerrar">Cerrar</button>
                                        </div>
                                    </div>
                                </div>
                            </div>




                            <!-- END FORM-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END PAGE CONTENT INNER -->
    </div>
</div>
<!-- END PAGE CONTENT BODY -->
<!-- END CONTENT BODY -->
