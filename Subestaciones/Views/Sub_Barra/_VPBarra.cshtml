@model IEnumerable<Subestaciones.Models.Clases.Barras>


<table id="datatable" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Barra</th>
            <th>Subestaci&oacute;n</th>
            <th>Conductor</th>
            <th>Corriente</th>
            <th>Cantidad de conductores</th>
            <th>Tensi&oacute;n (kV)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            string llaves = item.sub + "|" + item.barra;

        <tr>

            <td>
                @item.barra
            </td>
            <td>
                @item.NombreSub
            </td>
            <td>
                @item.cond
            </td>
            <td>
                @item.corr
            </td>
            <td>
                @item.cantC
            </td>
            <td>
                @item.tension
            </td>
            <td style="width: 125px;">
                <a href="@Url.Action("Details","Sub_Barra", new { Codigosub = item.sub , Codigobarra = item.barra  } )" class="btn btn-info mt-sweetalert btn-xs" title="Detalles"><i class="fa fa-eye"></i>  </a>
                <a href="@Url.Action("Edit","Sub_Barra", new { Codigosub = item.sub , Codigobarra = item.barra } )" class="btn btn-warning mt-sweetalert btn-xs" title="Editar"><i class="fa fa-pencil"></i>  </a>
                <a href="javascript:;" id="@llaves" title="Eliminar" class="btn btn-default mt-sweetalert btn-xs" data-title="¿Est&aacute; seguro de eliminar la barra @item.barra?" data-message="¡Los valores que est&aacute;n en la fila a eliminar no se podr&aacute;n recuperar!"
                   data-type="info" data-show-confirm-button="true" data-confirm-button-class="btn-success" data-show-cancel-button="true" data-cancel-button-class="btn-default" data-close-on-confirm="false" data-close-on-cancel="false"
                   data-confirm-button-text='¡S&iacute;, eliminar!' data-cancel-button-text='¡No, cancelar!' data-popup-title-success="¡Eliminado!" data-popup-message-success="La barra @item.barra ha sido eliminada." data-popup-title-cancel="Cancelado"
                   data-popup-message-cancel="La acci&oacute;n de eliminar ha sido cancelada."><i class="fa fa-trash-o"></i></a>

            </td>
        </tr>
        }

    </tbody>
</table>