
@if (ViewBag.cantidad > 0)
{
    <table id="datatable_termometro" class="table table-striped table-bordered table-hover">
        <thead>
            @*<tr>
                    <th colspan="2" style="align-content:center">Cargadores del Banco de Baterías</th>
                </tr>*@
            <tr>
                @*<th data-field="id" data-switchable="false">Código</th>*@
                <th data-field="name">Termómetro</th>
                <th data-field="name">Tipo</th>
                <th data-field="name">Rango (°C)</th>
                <th data-field="name">Acciones</th>


            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.termo)
            {
                string llaves = item.Id_Termometro + "|" + item.NumAccion;
                <tr>
                    <td>@item.Numero</td>
                    <td>@item.Tipo</td>
                    <td>@item.Rango</td>
                    <td style="width: 95px;">
                        <a href="@Url.Action("Edit", "SubTermometrosTransfTransmisions", new {  EA = @item.Id_EAdministrativa,id_t = @item.Id_Transformador, id = @item.Id_Termometro,NumAccion = @item.NumAccion,ubicado = @ViewBag.ubicado})" class="btn btn-warning btn-xs" title="Editar"><i class="fa fa-pencil"></i>  </a>
                        <a id="@llaves" href="javascript:;" class="btn btn-danger btn-xs" title="Eliminar"><i class="fa fa-trash-o"></i>  </a>
                        @* <a href="@Url.Action("Delete", "SubTermometrosTransfSubTransmisions", new { id = @item.Id_Termometro })" class="btn btn-danger btn-xs" title="Eliminar"><i class="fa fa-trash-o"></i>  </a>*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

