<link href="@Url.Content("~/Content/plugins/sweetalert/sweetalert.css")" rel="stylesheet" />



<!-- END PAGE HEAD-->
<!-- BEGIN PAGE CONTENT BODY -->
<div class="page-content">
    <div class="container-fluid">
        <!-- BEGIN PAGE BREADCRUMBS -->
        <ul class="page-breadcrumb breadcrumb">
            <li>
                <a href="@Url.Action("Index","Home")">Inicio</a>
                <i class="fa fa-circle"></i>
            </li>

            <li>
                <span>Transformadores de potencia ubicados en @ViewBag.En</span>
            </li>

        </ul>
        <!-- END PAGE BREADCRUMBS -->
        <!-- BEGIN PAGE CONTENT INNER -->
        <div class="page-content-inner">
            <div class="m-heading-1 border-green m-bordered">
                <div class="form-horizontal">
                    <div class="row">
                        <div class="col-md-6" style="text-align:start">

                            <a class="btn green btn-outline" href="@Url.Action("Create","TransformadoresTransmisions",new { ubicado = @ViewBag.ubicado })"><i class="fa fa-thumb-tack"></i> Nuevo</a> &emsp;
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="portlet box blue">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-gift"></i>Listado de transformadores potencia ubicados en @ViewBag.En
                        </div>

                    </div>
                    <div class="portlet-body form">
                        @using (Html.BeginForm("Index", "TransformadoresTransmisions"))
                        {
                            @Html.AntiForgeryToken()
                            <!-- BEGIN FORM-->
                            <div class="row">
                                <div class="col-md-12">
                                    <!-- BEGIN EXAMPLE TABLE PORTLET-->
                                    <div class="portlet light">
                                        <div class="portlet-title">
                                            <div class="caption font-dark">
                                                @*<i class="icon-settings font-dark"></i>
                                                    <span class="caption-subject bold uppercase">Buttons</span>*@
                                            </div>
                                            <div class="tools"> </div>
                                        </div>
                                        <div class="portlet-body" id="TablaResumen">
                                            @Html.Partial("_VPTablaTransfTrans", Model)
                                        </div>
                                    </div>
                                    <!-- END EXAMPLE TABLE PORTLET-->
                                </div>
                            </div>
                        }
                        <!-- END FORM-->
                    </div>
                </div>
            </div>
        </div>




    </div>
    <!-- END PAGE CONTENT INNER -->
</div>
@section styles {
    <link href="~/Scripts/assets/global/plugins/select2/css/select2.min.css" rel="stylesheet" type="text/css" />
