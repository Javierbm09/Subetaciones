@model IEnumerable<Subestaciones.Models.Sub_NomCargadores>

<table id="datatable" class="table table-striped table-bordered table-hover"> 
    <thead>
        <tr>
            <th>Tipo de Cargador</th>
            <th>Tensión CD</th>
            <th>Tensión CA</th>
            <th>Corriente</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoCargador)

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VoltajeCorrienteDirecta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VoltajeCA)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Corriente)
                </td>
                <td style="width: 125px;">
                    <a href="@Url.Action("Details","Sub_NomCargadores", new { id = item.IdCargador } )" class="btn btn-info mt-sweetalert btn-xs" title="Detalles"><i class="fa fa-eye"></i>  </a>
                    <a href="@Url.Action("Edit","Sub_NomCargadores", new { id = item.IdCargador } )" class="btn btn-warning mt-sweetalert btn-xs" title="Editar"><i class="fa fa-pencil"></i>  </a>
                    <a href="javascript:;" id="@item.IdCargador" title="Eliminar" class="btn btn-default mt-sweetalert btn-xs" data-title="¿Está seguro de eliminar el tipo de cargador @item.TipoCargador?" data-message="¡Los valores que están en la fila a eliminar no se podrán recuperar!"
                       data-type="info" data-show-confirm-button="true" data-confirm-button-class="btn-success" data-show-cancel-button="true" data-cancel-button-class="btn-default" data-close-on-confirm="false" data-close-on-cancel="false"
                       data-confirm-button-text='¡Sí, eliminar!' data-cancel-button-text='¡No, cancelar!' data-popup-title-success="¡Eliminado!" data-popup-message-success="El tipo de cargador @item.TipoCargador ha sido eliminado." data-popup-title-cancel="Cancelado"
                       data-popup-message-cancel="La acción de eliminar ha sido cancelada."><i class="fa fa-trash-o"></i></a>

                </td>
            </tr>
        }
    </tbody>
</table>

