@model IEnumerable<Subestaciones.Models.Clases.TC>

<table id="datatable" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>No serie</th>
            <th>Subestaci&oacute;n</th>
            <th>Ubicado en</th>
            <th>C&oacute;digo equipo asociado</th>
            <th>Fase</th>
            <th>Voltaje nominal</th>
            <th>Fabricante</th>
            <th>Tipo</th>
            <th>Año fab</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @item.Nro_Serie
                </td>
                <td>
                    @item.CodSub
                </td>
                <td>
                    @item.UbicadoEn
                </td>
                <td>
                    @item.CodigoE
                </td>
                <td>
                    @item.Fase
                </td>
                <td>
                    @item.VoltInst
                </td>
                <td>
                    @item.Fabricante
                </td>
                <td>
                    @item.Tipo
                </td>
                <td>
                    @item.AnnoFab
                </td>
                <td style="width: 125px;">
                    <a href="@Url.Action("Details","ES_TransformadorCorriente", new { Nro_Serie = item.Nro_Serie   } )" class="btn btn-info mt-sweetalert btn-xs" title="Detalles"><i class="fa fa-eye"></i>  </a>
                    <a href="@Url.Action("Edit","ES_TransformadorCorriente", new { Nro_Serie = item.Nro_Serie } )" class="btn btn-warning mt-sweetalert btn-xs" title="Editar"><i class="fa fa-pencil"></i>  </a>
                    <a href="javascript:;" id="@item.Nro_Serie" title="Eliminar" class="btn btn-default mt-sweetalert btn-xs" data-title="¿Est&aacute; seguro de eliminar el transformador de corriente @item.Nro_Serie?" data-message="¡Los valores que est&aacute;n en la fila a eliminar no se podr&aacute;n recuperar!"
                       data-type="info" data-show-confirm-button="true" data-confirm-button-class="btn-success" data-show-cancel-button="true" data-cancel-button-class="btn-default" data-close-on-confirm="false" data-close-on-cancel="false"
                       data-confirm-button-text='¡S&iacute;, eliminar!' data-cancel-button-text='¡No, cancelar!' data-popup-title-success="¡Eliminado!" data-popup-message-success="El transformador de corriente @item.Nro_Serie ha sido eliminado." data-popup-title-cancel="Cancelado"
                       data-popup-message-cancel="La acci&oacute;n de eliminar ha sido cancelada."><i class="fa fa-trash-o"></i></a>

                </td>
            </tr>
        }

    </tbody>
</table>