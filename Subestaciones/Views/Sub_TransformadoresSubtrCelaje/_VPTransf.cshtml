<div class="modal" id="basic1" role="dialog" tabindex="-1" aria-labelledby="demo-default-modal" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <!--Modal header-->
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><i class="pci-cross pci-circle"></i></button>
                <h4 class="modal-title">Transformadores en subestaci&oacute;n</h4>
            </div>


            <!--Modal body-->
            <div class="modal-body">
                <table class="table" id="datatable_transformadores" style="cursor:pointer">
                    <thead>
                        <tr>
                            <th>
                                Transformador
                            </th>
                            <th>
                                N&uacute;m serie
                            </th>
                            <th>
                                N&uacute;m empresa
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.listaTransf)
                        {
                            <tr>

                                <td>
                                    <input type="hidden" value=@item.Id_Transformador id="id_t">
                                    <input type="hidden" value=@item.Nombre id="NombreT">
                                    <input type="hidden" value=@item.NoSerie id="NSerie">
                                    <input type="hidden" value=@item.Numemp id="NEmp">
                                    <input type="hidden" value=@item.Codigo id="sub">
                                    <input type="hidden" value=@item.Id_EAdministrativa id="EA">
                                    <input type="hidden" value=@item.Codigo id="sub">

                                    @item.Nombre
                                </td>
                                <td>
                                    @item.NoSerie
                                </td>
                                <td>
                                    @item.Numemp
                                </td>


                            </tr>
                        }

                    </tbody>

                </table>
            </div>


            <!--Modal footer-->
            <div class="modal-footer">
                <button class="btn btn-primary" type="button" id="Seleccionar">Seleccionar</button>
                <button data-dismiss="modal" class="btn btn-default" type="button" id="cerrar">Cerrar</button>
            </div>
        </div>
    </div>
</div>

