@model Subestaciones.Models.Clases.TransformadorSubtransmision
<div class="row">
    <div class="form-group col-md-4">
        @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label" })
        <div class="input-group " id="SA">
            @{
                var value = Model != null ? Model.Nombre : "";
            }

            <input type="text" disabled class="form-control" id="transf" value="@value">
            <span class="input-group-addon btn blue tooltips" id="subestacionesA" data-original-title="Seleccionar subestaci&oacute;n">
                <span class="fa fa-search" href="#basic1" data-toggle="modal"></span>
                @*<button class="btn green"  type="button" id="listaTransf">Go!</button>*@
                @*<span class="btn blue btn-outline sbold" href="#basic" data-toggle="modal">Conductores </span>*@
            </span>
        </div>
        @Html.HiddenFor(model => model.Nombre)

    </div>
    @Html.HiddenFor(model => model.Id_Transformador)
    @Html.HiddenFor(model => model.Id_EAdministrativa)
    @Html.HiddenFor(model => model.Subestacion)


    <div class="form-group col-md-2">
        @Html.LabelFor(model => model.Numemp, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.Numemp, new { htmlAttributes = new { @class = "form-control", @id = "nEmp", @readonly = "readonly" } })
    </div>
    <div class="form-group col-md-2">
        @Html.LabelFor(model => model.NoSerie, htmlAttributes: new { @class = "control-label" })
