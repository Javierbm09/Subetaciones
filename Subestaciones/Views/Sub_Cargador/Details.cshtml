<!-- END PAGE HEAD-->
<!-- BEGIN PAGE CONTENT BODY -->
<div class="page-content">
    <div class="container-fluid">
        <!-- BEGIN PAGE BREADCRUMBS -->
        <ul class="page-breadcrumb breadcrumb">
            <li>
                <a href="@Url.Action("Edit","Sub_RedCorrienteDirecta",new {Id_ServicioCD= Model.Id_ServicioCDCarg })">Servicio de corriente directa</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <span>Detalles cargadores</span>
            </li>
        </ul>
        <!-- END PAGE BREADCRUMBS -->
        <!-- BEGIN PAGE CONTENT INNER -->
        <div class="page-content-inner">
            <div class="row">
                <div class="col-md-12">

                    <div class="portlet box blue">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="ti-stats-down"></i>Detalles cargadores de los bancos de bater&iacute;as del servicio de corriente directa
                            </div>
                        </div>
                        <div class="portlet-body form">

                            @using (Html.BeginForm())
                            {

                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.AntiForgeryToken()
                                @Html.HiddenFor(model => model.Id_ServicioCDCarg)

                                <!-- BEGIN FORM-->

                                <div class="horizontal-form">
                                    <div class="form-body">
                                       

                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.tipo, htmlAttributes: new { @class = "control-label " })
                                                    @Html.EditorFor(model => model.tipo, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })

                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.EstOp, htmlAttributes: new { @class = "control-label " })
                                                    @Html.EditorFor(model => model.EstOp, new { htmlAttributes = new { @class = "form-control", @readonly="readonly" } })
                                                    @Html.ValidationMessageFor(model => model.EstOp, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.Id_RedCA, htmlAttributes: new { @class = "control-label " })
                                                    @Html.EditorFor(model => model.Id_RedCA, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })


                                                </div>
                                            </div>

                                        </div>


                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group" id="cargarTensionCD">
                                                    <label class="control-label">Tensión Corriente Directa</label>
                                                    <input id="tensionCD" type="text" class="form-control" value="" readonly="readonly" />
                                                </div>
                                            </div>

                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.Modelo, htmlAttributes: new { @class = "control-label " })
                                                    @Html.EditorFor(model => model.Modelo, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })

                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.NroSerie, htmlAttributes: new { @class = "control-label" })
                                                    @Html.EditorFor(model => model.NroSerie, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })

                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-2">
                                                <div class="form-group" id="cargarCorriente">
                                                    <label class="control-label">Corriente</label>
                                                    <input id="corriente" type="text" class="form-control" value="" readonly="readonly" />
                                                </div>
                                            </div>

                                            <div class="col-md-1">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.MesFab, htmlAttributes: new { @class = "control-label " })
                                                    @Html.EditorFor(model => model.MesFab, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })

                                                </div>
                                            </div>
                                            <div class="col-md-1">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.AnnoFab, htmlAttributes: new { @class = "control-label " })
                                                    @Html.EditorFor(model => model.AnnoFab, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })

                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.FechaInstalado, htmlAttributes: new { @class = "control-label" })
                                                    @Html.EditorFor(model => model.FechaInstalado, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })


                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.Fabricante, htmlAttributes: new { @class = "control-label " })
                                                    @Html.EditorFor(model => model.Fabricante, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })

                                                </div>
                                            </div>

                                        </div>

                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group" id="cargarTensionCA">
                                                    <label class="control-label">Tensión CA</label>
                                                    <input id="tensionCA" type="text" class="form-control" value="" readonly="readonly" />
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.VoltajeMaxCD, htmlAttributes: new { @class = "control-label " })
                                                    @Html.EditorFor(model => model.VoltajeMaxCD, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })

                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.VoltajeMinCD, htmlAttributes: new { @class = "control-label " })
                                                    @Html.EditorFor(model => model.VoltajeMinCD, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })

                                                </div>
                                            </div>
                                        </div>



                                        <div class="form-actions right">
                                            <a class="btn btn-info" href="@Url.Action("Edit","Sub_RedCorrienteDirecta",new {Id_ServicioCD= Model.Id_ServicioCDCarg })"><i class="fa fa-arrow-left"></i> Regresar</a>
                                            <a class="btn btn-warning" href="@Url.Action("Edit","Sub_Cargador", new {id = Model.Id_Cargador , cod = ViewBag.sub })"><i class="fa fa-pencil"></i>Editar</a>

                                        </div>

                                    </div>
                                </div>
                            }
                            <!-- END FORM-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END PAGE CONTENT INNER -->
    </div>
</div>
<!-- END PAGE CONTENT BODY -->
<!-- END CONTENT BODY -->
