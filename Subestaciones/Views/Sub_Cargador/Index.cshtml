@model List<Subestaciones.Models.Clases.BancoCargadores>

@{
    ViewBag.Title = "Cargadores del Banco de Baterías";
    ViewBag.PTitle = "Cargadores del Banco de Baterías";
}
@section breadcrumb {
    <li><a href="#"><i class="fa fa-cubes"></i></a></li>
    <li class="active">Cargadores del Banco de Baterías</li>
}


<div class="row">
    <div class="col-md-12">
        <table id="datatable" class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Tipo de Cargador</th>
                    <th>Modelo</th>
                    <th>Número Serie</th>
                    <th>Estado Operativo</th>
                    <th>Mes/Año Fabricación</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @item.tipo
                        </td>
                        <td>
                            @item.Modelo
                        </td>
                        <td>
                            @item.NroSerie
                        </td>
                        <td>
                            @item.EstOp
                        </td>
                        <td>
                            @item.MesFab / @item.AnnoFab
                        </td>

                        <td style="width: 95px;">
                            <a href="@Url.Action("Details","Sub_Cargador", new { Id_Cargador = item.Id_Cargador, Id_ServicioCD = item.Id_ServicioCDCarg   } )" class="btn btn-info btn-xs" title="Detalles"><i class="fa fa-eye"></i>  </a>
                            <a href="@Url.Action("Edit","Sub_Cargador", new { Id_Cargador = item.Id_Cargador  } )" class="btn btn-warning btn-xs" title="Editar"><i class="fa fa-pencil"></i>  </a>
                            <a href="@Url.Action("Delete","Sub_Cargador", new { Id_Cargador = item.Id_Cargador } )" class="btn btn-danger btn-xs" title="Eliminar"><i class="fa fa-trash-o"></i>  </a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>


<div class="row">
    <div class="col-md-12">
        <a href="@Url.Action("Create","Sub_Cargador")" class="btn btn-info"><i class="fa fa-plus"></i> Nuevo</a>
        <a class="btn btn-default" href="@Url.Action("Edit","Sub_RedCorrienteDirecta", new { Id_ServicioCD = @ViewBag.ids })"><i class="fa fa-plus"></i> Cargadores del Banco de Baterías</a>
        @*<a href="@Url.Action("Edit","Sub_RedCorrienteDirecta", new { Id_ServicioCD = item  } )" class="btn btn-info"><i class="fa fa-plus"></i> Volver a la Red de Corriente Directa</a>*@
    </div>
</div>

@section script {
    <script src="~/Scripts/custom/datatables.js"></script>
}