@model IEnumerable<Subestaciones.Models.Clases.InstMedicion>

<table id="datatable" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Mediciones</th>
            <th>Instrumento</th>
            <th>Modelo o tipo</th>
            <th>Serie</th>
            <th>Fabricante</th>
            <th>Acciones</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @item.TipoMedicion
                </td>
                <td>
                    @item.Instrumento
                </td>
                <td>
                    @item.ModeloTipo
                </td>
                <td>
                    @item.Serie
                </td>
                <td>
                    @item.Fabricante
                </td>

                <td style="width: 125px;">
                    <a href="@Url.Action("Details","Sub_NomInstrumentoMedicion", new { id = item.Id_InstrumentoMedicion} )" class="btn btn-info mt-sweetalert btn-xs" title="Detalles"><i class="fa fa-eye"></i>  </a>
                    <a href="@Url.Action("Edit","Sub_NomInstrumentoMedicion", new { id = item.Id_InstrumentoMedicion} )" class="btn btn-warning mt-sweetalert btn-xs" title="Editar"><i class="fa fa-pencil"></i>  </a>
                    <a href="javascript:;" id="@item.Id_InstrumentoMedicion" title="Eliminar" class="btn btn-default mt-sweetalert btn-xs" data-title="¿Está seguro de eliminar el instrumento de medici&oacute;n @item.Instrumento?" data-message="¡Los valores que están en la fila a eliminar no se podr&aacute;n recuperar!"
                       data-type="info" data-show-confirm-button="true" data-confirm-button-class="btn-success" data-show-cancel-button="true" data-cancel-button-class="btn-default" data-close-on-confirm="false" data-close-on-cancel="false"
                       data-confirm-button-text='¡Sí, eliminar!' data-cancel-button-text='¡No, cancelar!' data-popup-title-success="¡Eliminado!" data-popup-message-success="El tipo de bater&iacute;a @item.Instrumento ha sido eliminado." data-popup-title-cancel="Cancelado"
                       data-popup-message-cancel="La acción de eliminar ha sido cancelada."><i class="fa fa-trash-o"></i></a>

                </td>
            </tr>
        }

    </tbody>
</table>