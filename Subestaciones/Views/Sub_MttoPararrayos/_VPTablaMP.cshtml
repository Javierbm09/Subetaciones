@model IEnumerable<Subestaciones.Models.Clases.MttosPararrayos>

<table id="datatable" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Subestación</th>
            <th>Tipo Equipo Protegido</th>
            <th>Código Equipo Protegido</th>
            <th>Tipo Mantenimiento</th>
            <th>Fecha</th>
            <th>Realizado Por</th>
            <th>Mantenido</th>
            <th>Acciones</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            string llaves = item.id_EAdministrativa + "|" + item.id_MttoPararrayo;
            <tr>

                <td>
                    @item.subestacion
                </td>
                <td>
                    @item.TequipoProt
                </td>
                <td>
                    @item.CodigoEquipoProtegido
                </td>
                <td>
                    @item.TipoMtto
                </td>
                <td>
                    @item.fechaMantenimiento
                </td>
                <td>
                    @item.Nombre
                </td>
                <td>
                    @Html.EditorFor(modelItem => item.Mantenido.Value, new { htmlAttributes = new { @class = "form-control js-switch", @readonly = true } })
                </td>

                <td style="width: 125px;">
                    <a href="@Url.Action("Details","Sub_MttoPararrayos", new { idEA = item.id_EAdministrativa, idMtto = item.id_MttoPararrayo } )" class="btn btn-info mt-sweetalert btn-xs" title="Detalles"><i class="fa fa-eye"></i>  </a>
                    <a href="@Url.Action("Edit","Sub_MttoPararrayos", new { idEA = item.id_EAdministrativa, idMtto = item.id_MttoPararrayo } )" class="btn btn-warning mt-sweetalert btn-xs" title="Editar"><i class="fa fa-pencil"></i>  </a>
                    <a href="javascript:;" id="@llaves" title="Eliminar" class="btn btn-default mt-sweetalert btn-xs" data-title="¿Está seguro de eliminar el mantenimiento al pararrayo @item.CodigoEquipoProtegido?" data-message="¡Los valores que están en la fila a eliminar no se podr&aacute;n recuperar!"
                       data-type="info" data-show-confirm-button="true" data-confirm-button-class="btn-success" data-show-cancel-button="true" data-cancel-button-class="btn-default" data-close-on-confirm="false" data-close-on-cancel="false"
                       data-confirm-button-text='¡Sí, eliminar!' data-cancel-button-text='¡No, cancelar!' data-popup-title-success="¡Eliminado!" data-popup-message-success="El mantenimiento al pararrayo @item.CodigoEquipoProtegido ha sido eliminado." data-popup-title-cancel="Cancelado"
                       data-popup-message-cancel="La acción de eliminar ha sido cancelada."><i class="fa fa-trash-o"></i></a>

                </td>
            </tr>
        }

    </tbody>
</table>