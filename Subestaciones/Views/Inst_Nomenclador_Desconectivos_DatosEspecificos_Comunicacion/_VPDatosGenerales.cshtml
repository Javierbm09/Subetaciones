        </div>*@
    </div>
<script>
    $("#modelo").on("change", function() {
        var id_nom = $("#modelo").val();
        $('#Id_Nomenclador').val(id_nom);


         $("#_VPDetallesDatosGenerales").load('@Url.Content("~/Inst_Nomenclador_Desconectivos_DatosEspecificos_Comunicacion/_VPDetallesDatosGenerales")', { modelo: id_nom }, function () {
            $("#modal-sm-loading").modal('hide');
        });

    });

    $("#modelo").trigger("change");

</script>