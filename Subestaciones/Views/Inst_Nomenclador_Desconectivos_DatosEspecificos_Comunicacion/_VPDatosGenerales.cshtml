@model Subestaciones.Models.Clases.ModelosDesconectivos

<div class="form">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    
    
        <div class="row">
        <div class="col-md-12">
        <div class="form-group" id="mod">
        @Html.LabelFor(model => model.modelo, htmlAttributes: new { @class = "control-label " })
        @Html.DropDownListFor(model => model.modelo, ViewBag.nom as SelectList,
        "Seleccione un elemento de la lista", htmlAttributes: new { @class = "form-control select2" })
        </div>
        </div>

        </div>
        <div id="_VPDetallesDatosGenerales"></div>

