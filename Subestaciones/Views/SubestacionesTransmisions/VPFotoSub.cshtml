@model List<Subestaciones.Models.Fotos>


<table id="datatable_FotoSub" class="table table-striped table-bordered table-hover">
    <thead>
        @*<tr>
                <th colspan="2" style="align-content:center">Transformadores</th>
            </tr>*@
        <tr>
            <th data-field="id" data-switchable="false">Nombre</th>
            <th data-field="name">Versi&oacute;n</th>
            <th data-field="name">Imagen</th>

        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            String imgSrc = "";
            if (item.Foto != null)
            {
                var base64 = Convert.ToBase64String(item.Foto);
                imgSrc = String.Format("data:image/jpeg;base64,{0}", base64);
            }
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Version</td>
                <td>
                    <img class="ImgFoto" alt="Version 1" src='@imgSrc' height=300 width=300
                         data-target="#myModal" data-toggle="modal" />
                </td>


            </tr>
        }
    </tbody>
</table>

<script>
    var tableo = $('#datatable_FotoSub').DataTable({
        "language": {
            "aria": {
                "sortAscending": ": activate to sort column ascending",
                "sortDescending": ": activate to sort column descending"
            },
            "emptyTable": "No data available in table",
            "info": "Showing _START_ to _END_ of _TOTAL_ entries",
            "infoEmpty": "No entries found",
            "infoFiltered": "(filtered1 from _MAX_ total entries)",
            "lengthMenu": "_MENU_ entries",
            "search": "Buscar:",
            "zeroRecords": "No matching records found"
        },
        "order": [
            [0, 'asc']
        ],
        responsive: true,
        "pageLength": 10
    });
</script>
