                                                <thead>
                                                    <tr>
                                                        <th>Tensi&oacute;n</th>
                                                                                                            </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model)
        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.tension)
                                                </td>
                                                
                                            </tr>
}
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                    <!-- END EXAMPLE TABLE PORTLET-->
                                </div>
                            </div>
                        }
                        <!-- END FORM-->
                    </div>
                </div>
            </div>
        </div>




    </div>
    <!-- END PAGE CONTENT INNER -->
</div>
