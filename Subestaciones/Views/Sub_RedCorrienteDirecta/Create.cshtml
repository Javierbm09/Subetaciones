<!-- END PAGE HEAD-->
<!-- BEGIN PAGE CONTENT BODY -->
<div class="page-content">
    <div class="container-fluid">
        <!-- BEGIN PAGE BREADCRUMBS -->
        <ul class="page-breadcrumb breadcrumb">
            <li>
                <a href="@Url.Action("Index","Sub_RedCorrienteDirecta")">Lista de servicios de corriente directa</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <span>Insertar</span>
            </li>
        </ul>
        <!-- END PAGE BREADCRUMBS -->
        <!-- BEGIN PAGE CONTENT INNER -->
        <div class="page-content-inner">
            <div class="row">
                <div class="col-md-12">

                    <div class="portlet box blue">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="ti-stats-down"></i>Insertar servicio de corriente directa
                            </div>
                        </div>
                        <div class="portlet-body form">

                            @using (Html.BeginForm())
                            {
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.AntiForgeryToken()

                                <!-- BEGIN FORM-->

                                <div class="horizontal-form">
                                    <div class="form-body">
                                        <div class="row" style="display:none">
                                            @Html.ValidationMessageFor(model => model.Codigo, "", new { @class = "text-danger" })
                                            @Html.ValidationMessageFor(model => model.NombreServicioCD, "", new { @class = "text-danger" })

                                        </div>

                                        <div class="row">

                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.Codigo, htmlAttributes: new { @class = "control-label" })
                                                    @Html.DropDownListFor(model => model.Codigo, ViewBag.Subestacion as SelectList,
"Seleccione un elemento de la lista", htmlAttributes: new { @class = "form-control select2" })
                                                </div>
                                            </div>
                                            <div class="col-md-8">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.NombreServicioCD, htmlAttributes: new { @class = "control-label" })
                                                    @Html.EditorFor(model => model.NombreServicioCD, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.idVoltaje, htmlAttributes: new { @class = "control-label" })
                                                    @Html.DropDownListFor(model => model.idVoltaje, ViewBag.voltaje as SelectList,
"Seleccione un elemento de la lista", htmlAttributes: new { @class = "form-control select2" })
                                                    @Html.ValidationMessageFor(model => model.idVoltaje, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.UsoRed, htmlAttributes: new { @class = "control-label" })
                                                    @Html.DropDownListFor(model => model.UsoRed, ViewBag.usoRedCD as SelectList,
"Seleccione un elemento de la lista", htmlAttributes: new { @class = "form-control select2" })
                                                    @Html.ValidationMessageFor(model => model.UsoRed, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.ControlAislamBarras, htmlAttributes: new { @class = "control-label" })
                                                    <div class="radio">
                                                        <label>
                                                            @Html.RadioButtonFor(model => model.ControlAislamBarras, "True")
                                                            Sí
                                                        </label>
                                                        <label>
                                                            @Html.RadioButtonFor(model => model.ControlAislamBarras, "False")
                                                            No
                                                        </label>
                                                    </div>

                                                    @Html.ValidationMessageFor(model => model.ControlAislamBarras, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.Observaciones, htmlAttributes: new { @class = "control-label " })
                                                    @Html.TextAreaFor(model => model.Observaciones, new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(model => model.Observaciones, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-actions right">
                                            <a class="btn btn-primary" href="@Url.Action("Index","Sub_RedCorrienteDirecta")"><i class="fa fa-list"></i> Listado de servicios</a>
                                            <button type="submit" class="btn btn-success"><i class="fa fa-plus"></i> Insertar</button>
                                        </div>
                                    </div>
                                </div>

                            }
                            <!-- END FORM-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END PAGE CONTENT INNER -->
    </div>
</div>
<!-- END PAGE CONTENT BODY -->
<!-- END CONTENT BODY -->
