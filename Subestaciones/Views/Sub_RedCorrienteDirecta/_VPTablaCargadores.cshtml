@if (ViewBag.cantidad > 0)
{
    <table id="datatable_cargadores" class="table table-striped table-bordered table-hover">
        <thead>
            @*<tr>
                <th colspan="2" style="align-content:center">Cargadores del Banco de Baterías</th>
            </tr>*@
            <tr>
                @*<th data-field="id" data-switchable="false">Código</th>*@
                <th data-field="name">Tipo cargador</th>
                <th data-field="name">Modelo</th>
                <th data-field="name">No serie</th>
                <th data-field="name">Estado operativo</th>
                <th data-field="name">Red CA</th>
                <th data-field="name">Acciones</th>
               

            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.cargadores)
            {
            string llaves = "carg" + "|" + item.Id_Cargador;
            <tr>
                <td>@item.tipo</td>
                <td>@item.Modelo</td>
                <td>@item.NroSerie</td>
                <td>@item.EstOp</td>
                <td>@item.Id_RedCA</td>
                <td style="width: 125px;">
                    <a href="@Url.Action("Details","Sub_Cargador", new { id = @item.Id_Cargador, Id_ServicioCD = @item.Id_ServicioCDCarg, cod = ViewBag.subestacion } )" class="btn btn-info  mt-sweetalert btn-xs" title="Detalles"><i class="fa fa-eye"></i>  </a>
                    <a href="@Url.Action("Edit","Sub_Cargador", new { id = @item.Id_Cargador,Id_ServicioCD = @item.Id_ServicioCDCarg, cod = ViewBag.subestacion } )" class="btn btn-warning  mt-sweetalert btn-xs" title="Editar"><i class="fa fa-pencil"></i>  </a>
                    <a href="javascript:;" id="@llaves" title="Eliminar" class="btn btn-default mt-sweetalert btn-xs" data-title="¿Est&aacute; seguro de eliminar el cargador @item.NroSerie?" data-message="¡Los valores que est&aacute;n en la fila a eliminar no se podr&aacute;n recuperar!"
                       data-type="info" data-show-confirm-button="true" data-confirm-button-class="btn-success" data-show-cancel-button="true" data-cancel-button-class="btn-default" data-close-on-confirm="false" data-close-on-cancel="false"
                       data-confirm-button-text='¡S&iacute;, eliminar!' data-cancel-button-text='¡No, cancelar!' data-popup-title-success="¡Eliminado!" data-popup-message-success="El cargador @item.NroSerie ha sido eliminado." data-popup-title-cancel="Cancelado"
                       data-popup-message-cancel="La acci&oacute;n de eliminar ha sido cancelada."><i class="fa fa-trash-o"></i></a>

                </td>
            </tr>
            }
        </tbody>
    </table>
}
