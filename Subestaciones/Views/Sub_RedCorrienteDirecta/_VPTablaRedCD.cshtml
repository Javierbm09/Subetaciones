@model IEnumerable<Subestaciones.Models.Clases.RedCD>


<table id="datatable" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Nombre del servicio</th>
            <th>Subestaci&oacute;n</th>

            <th>Tensi&oacute;n CD (V)</th>
            <th>Uso de la red</th>
            <th>Control de aislamiento</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @item.NombreServicioCD
            </td>
            <td>
                @item.NombreSub
            </td>

            <td>
                @item.idVoltaje
            </td>
            <td>
                @item.UsoRed
            </td>
            <td>
                @item.ControlAislamBarras
            </td>

            <td style="width: 125px;">
                <a href="@Url.Action("Details","Sub_RedCorrienteDirecta", new { Id_ServicioCD = item.ID   } )" class="btn btn-info mt-sweetalert btn-xs" title="Detalles"><i class="fa fa-eye"></i>  </a>
                <a href="@Url.Action("Edit","Sub_RedCorrienteDirecta", new { Id_ServicioCD = item.ID  } )" class="btn btn-warning mt-sweetalert btn-xs" title="Editar"><i class="fa fa-pencil"></i>  </a>
                <a href="javascript:;" id="@item.ID" title="Eliminar" class="btn btn-default mt-sweetalert btn-xs" data-title="¿Est&aacute; seguro de eliminar el servicio de corriente directa @item.NombreServicioCD?" data-message="¡Los valores que est&aacute;n en la fila a eliminar no se podr&aacute;n recuperar!"
                   data-type="info" data-show-confirm-button="true" data-confirm-button-class="btn-success" data-show-cancel-button="true" data-cancel-button-class="btn-default" data-close-on-confirm="false" data-close-on-cancel="false"
                   data-confirm-button-text='¡S&iacute;, eliminar!' data-cancel-button-text='¡No, cancelar!' data-popup-title-success="¡Eliminado!" data-popup-message-success="El servicio de corriente directa @item.NombreServicioCD ha sido eliminada." data-popup-title-cancel="Cancelado"
                   data-popup-message-cancel="La acci&oacute;n de eliminar ha sido cancelada."><i class="fa fa-trash-o"></i></a>


            </td>
        </tr>
        }

    </tbody>
</table>

