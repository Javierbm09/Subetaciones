@if (ViewBag.cantidad > 0)
{
    <table id="datatable_baterias" class="table table-striped table-bordered table-hover">
        <thead>
            @*<tr>
                    <th colspan="2" style="align-content:center">Cargadores del Banco de Baterías</th>
                </tr>*@
            <tr>
                @*<th data-field="id" data-switchable="false">Código</th>*@
                <th data-field="name">Modelo</th>
                <th data-field="name">Cant unidades</th>
                <th data-field="name">Tensi/&oacute;n/Vasos</th>
                <th data-field="name">Densidad</th>
                <th data-field="name">Capacidad</th>
                <th data-field="name">Tensi&oacute;n</th>
                <th data-field="name">Acciones</th>


            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.baterias)
            {
                string llaves = "bat" + "|" + item.Id_Bateria;
                <tr>
                    <td>@item.modelo</td>
                    <td>@item.CantidadVasos</td>
                    <td>@item.Voltaje_Vasos</td>
                    <td>@item.Densisdad</td>
                    <td>@item.Capacidad</td>
                    <td>@item.Tension</td>
                    <td style="width: 125px;">
                        <a href="@Url.Action("Details","Sub_Baterias", new { id = @item.Id_Bateria, Id_ServicioCD = @item.Id_ServicioCDBat } )" class="btn btn-info mt-sweetalert btn-xs" title="Detalles"><i class="fa fa-eye"></i>  </a>
                        <a href="@Url.Action("Edit","Sub_Baterias", new { id = @item.Id_Bateria, Id_ServicioCD = @item.Id_ServicioCDBat } )" class="btn btn-warning mt-sweetalert btn-xs" title="Editar"><i class="fa fa-pencil"></i>  </a>
                        <a href="javascript:;" id="@llaves" value="bat" title="Eliminar" class="btn btn-default mt-sweetalert btn-xs" data-title="¿Est&aacute; seguro de eliminar la bater&iacute;a @item.modelo?" data-message="¡Los valores que est&aacute;n en la fila a eliminar no se podr&aacute;n recuperar!"
                           data-type="info" data-show-confirm-button="true" data-confirm-button-class="btn-success" data-show-cancel-button="true" data-cancel-button-class="btn-default" data-close-on-confirm="false" data-close-on-cancel="false"
                           data-confirm-button-text='¡S&iacute;, eliminar!' data-cancel-button-text='¡No, cancelar!' data-popup-title-success="¡Eliminado!" data-popup-message-success="La bater&iacute;a @item.modelo ha sido eliminada." data-popup-title-cancel="Cancelado"
                           data-popup-message-cancel="La acci&oacute;n de eliminar ha sido cancelada."><i class="fa fa-trash-o"></i></a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}

