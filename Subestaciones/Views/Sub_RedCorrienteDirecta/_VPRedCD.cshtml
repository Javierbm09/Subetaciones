@model Subestaciones.Models.Sub_RedCorrienteDirecta

<div class="panel panel-bordered-default">
    <div class="panel-heading">
        <h3 class="panel-title">Editar Servicio de Red de Corriente Directa</h3>
    </div>
    <hr />
    <div class="panel-body">
        @using (Html.BeginForm())

        {<div class="form">
                <div class="row">
                    @Html.AntiForgeryToken()


                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id_ServicioCD)

                    <div class="col-md-4">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Codigo, htmlAttributes: new { @class = "control-label" })
                            @Html.DropDownListFor(model => model.Codigo, ViewBag.Subestacion as SelectList,
                                    "Seleccione un elemento de la lista", htmlAttributes: new { @class = "select2_single form-control" })
                            @Html.ValidationMessageFor(model => model.Codigo, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="form-group">
                            @Html.LabelFor(model => model.NombreServicioCD, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.NombreServicioCD, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            @Html.ValidationMessageFor(model => model.NombreServicioCD, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            @Html.LabelFor(model => model.idVoltaje, htmlAttributes: new { @class = "control-label" })
                            @Html.DropDownListFor(model => model.idVoltaje, ViewBag.voltaje as SelectList,
                                                               "Seleccione un elemento de la lista", htmlAttributes: new { @class = "select2_single form-control" })
                            @Html.ValidationMessageFor(model => model.idVoltaje, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            @Html.LabelFor(model => model.UsoRed, htmlAttributes: new { @class = "control-label" })
                            @Html.DropDownListFor(model => model.UsoRed, ViewBag.usoRedCD as SelectList,
                                                               "Seleccione un elemento de la lista", htmlAttributes: new { @class = "select2_single form-control" })
                            @Html.ValidationMessageFor(model => model.UsoRed, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            @Html.LabelFor(model => model.ControlAislamBarras, htmlAttributes: new { @class = "control-label" })
                            <div class="radio">
                                <label>
                                    @Html.RadioButtonFor(model => model.ControlAislamBarras, "True")
                                    Sí
                                </label>
                                <label>
                                    @Html.RadioButtonFor(model => model.ControlAislamBarras, "False")
                                    No
                                </label>
                            </div>

                            @Html.ValidationMessageFor(model => model.ControlAislamBarras, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Observaciones, htmlAttributes: new { @class = "control-label " })
                            @Html.TextAreaFor(model => model.Observaciones, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Observaciones, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="tab-base panel-bordered-default">

                    <!--Nav Tabs-->
                    <ul class="nav nav-tabs">
                        <li class="active">
                            <a data-toggle="tab" href="#demo-lft-tab-1" aria-expanded="false">Cargadores de l Banco de Baterías </a>
                        </li>
                        <li class="">
                            <a data-toggle="tab" href="#demo-lft-tab-2" aria-expanded="true">Baterías</a>
                        </li>

                    </ul>

                    <!--Tabs Content-->
                    <div class="tab-content">
                        <div id="demo-lft-tab-1" class="tab-pane fade active in">
                            <div class="col-md-12">
                                <div id="TablaCargadores"></div>
                            </div>
                            <a href="@Url.Action("CrearCargador", "Sub_RedCorrienteDirecta",new { sub_RedCorrienteDirecta = @Model})" class="btn btn-info"><i class="fa fa-plus"></i> Agregar ff Cargador</a>
                            @*<a class="btn btn-default" href="@Url.Action("Index","Sub_Cargador", new { Id_ServicioCD = Model.Id_ServicioCD })"><i class="fa fa-plus"></i> Agregar Cargador</a>*@
                        </div>
                        <div id="demo-lft-tab-2" class="tab-pane fade ">
                            <p class="text-main text-semibold">Second Tab Content</p>
                            <div class="col-md-2">
                                <div id="TablaBaterias"></div>
                            </div>
                            <a href="@Url.Action("CrearBateria", "Sub_RedCorrienteDirecta",new { sub_RedCorrienteDirecta = @Model})" class="btn btn-info"><i class="fa fa-plus"></i> Agregar Cargador</a>
                        </div>

                    </div>
                </div>




                <div class="row">
                    <div class="col-sm-12">
                        <button type="submit" class="btn btn-success"><i class="fa fa-plus"></i> Guardar</button>



                        <a class="btn btn-default" href="@Url.Action("Index","Sub_RedCorrienteDirecta")"><i class="fa fa-list"></i> Listado de Cargadores</a>
                    </div>
                </div>
            </div>


        }

    </div>
</div>
