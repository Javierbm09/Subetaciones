@if (ViewBag.cantidad > 0)
{
   
    <table id="datatable_bancostransformadores" class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th colspan="2" style="align-content:center">Bancos Transformadores</th>
            </tr>
            <tr>
                <th data-field="id" data-switchable="false">Código</th>
                <th data-field="name">Seccionalizador</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.bancosTransformadores)
            {
                <tr>
                    <td> <input type="hidden" id="codigo_bancotransformador" value=@item.Codigo /> @item.Codigo </td>
                    <td> @item.Seccionalizador  </td>

                </tr>
            }
        </tbody>
    </table>

}