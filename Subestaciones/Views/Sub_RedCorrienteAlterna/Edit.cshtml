    <script>

        var codSub = $("#Codigo").val();
        var red = $("#Id_RedCA").val();
        var codigoBanco;
        var insertado = "@ViewBag.Inserto";

         if ((insertado != null) && (insertado == "Si")) {
            swal({
                title: "¡La red de corriente alterna fue insertada correctamente!",
                text: "¡Ahora puede gestionar los datos de sus transformadores uso planta y breakers!",
                type: "success",
                confirmButtonText: "Aceptar",
                confirmButtonClass: "btn-primary"
            });
        }

        $(document).ready(function () {

            jQuery("#_tension").on('input', function (evt) {
                this.value = this.value.replace(/[^0-9.*]/g, '');
            });

            jQuery("#_corriente").on('input', function (evt) {
                this.value = this.value.replace(/[^0-9.*]/g, '');
            });

            inicializar_select2();

            function inicializar_select2() {
                $(".select2").select2({
                    placeholder: "Seleccione un elemento de la lista"
                });
            }

            cargarTablaTransformadores();
            cargarTablaBreaker();
            $("#tablaTransformadores").html(null);
            $("#tablaBreakers").html(null);

            function cargarTablaTransformadores() {
                var codigoSub = $("#Codigo").val();

                if (codigoSub != "") {
                    $.ajax({
                        url: '@Url.Action("CargarTablaTransformadores", "Sub_RedCorrienteAlterna")',
                        method: "POST",
                        data: { codigoSubestacion: codigoSub},
                        success: function (data) {
                            $("#tablaTransformadores").html(data);
                            var table = $("#datatable_transformadores").DataTable({
                                "select": "single",
                                "responsive": true,
                                "ordering": true,
                                "info": false,
                                "paging": false,
                                "searching": false
                            });
                        }
                    });
                }
            };

            function cargarTablaBreaker() {
                var codigoSub = $("#Codigo").val();
                var id = $("#Id_RedCA").val();
                if (codigoSub != "" && id != "") {
                    $.ajax({
                        url: '@Url.Action("CargarTablaBreakers", "Sub_RedCorrienteAlterna")',
                        method: "POST",
                        data: { codigoSubestacion: codigoSub, idRedCA: id  },
                        success: function (data) {
                            $("#tablaBreakers").html(data);
                            var table = $("#datatable_breaker").DataTable({
                                "select": "single",
                                "responsive": true,
                                "ordering": true,
                                "info": false,
                                "paging": false,
                                "searching": false
                            });
                        }
                    });
                }
            };

            $("#_insertarBreakerAction").on('click', function () {
                var codigoDesconectivo = $("#_CodigoBreaker").val();
                var tensionNominal = $("#_tension").val();
                var corrienteNominal = $("#_corriente").val();

                var datosValidos = true;
                var nombreCampo = "";
                if (codigoDesconectivo == "") {
                    nombreCampo = "Codigo del Desconectivo";
                    datosValidos = false;
                } else if (tensionNominal == "") {
                    nombreCampo = "Tensión Nominal";
                    datosValidos = false;
                } else if (corrienteNominal == "") {
                    nombreCampo = "Corriente Nominal";
                    datosValidos = false;
                }

                if (!datosValidos) {
                    App.alert({
                        container: "#bootstrap_alerts_Breakers", // alerts parent container(by default placed after the page breadcrumbs)
                        place: "prepend", // append or prepent in container
                        type: "danger",  // alert's type
                        message: "Debe insertar " + nombreCampo + ".",  // alert's message
                        close: 1, // make alert closable
                        reset: 1, // close all previouse alerts first
                        focus: 1, // auto scroll to the alert after shown
                        closeInSeconds: 5,//, // auto close after defined seconds
                        icon: "fa fa-danger" // put icon before the message
                    });
                } else {

                    $.ajax({
                        cache: false,
                        dataType: 'json',
                        url: baseUrl + "Sub_DesconectivoSubestacion/InsertarBreakerBaja",
                        data: { sub: codSub, red: red, codD: codigoDesconectivo, tensionN: tensionNominal, corrienteN:corrienteNominal },
                        type: "POST",
                        success: function (data, status, xhr) {
                            $("#Breakers").jqxGrid('updatebounddata');
                            $("#_CodigoBreaker").val();
                            $("#_tension").val();
                            $("#_corriente").val();
                            App.alert({
                                container: "#bootstrap_alerts_Breakers", // alerts parent container(by default placed after the page breadcrumbs)
                                place: "prepend", // append or prepent in container
                                type: "success",  // alert's type
                                message: "La información se guardó correctamente.",  // alert's message
                                close: 1, // make alert closable
                                reset: 1, // close all previouse alerts first
                                focus: 1, // auto scroll to the alert after shown
                                closeInSeconds: 5,//, // auto close after defined seconds
                                icon: "fa fa-success" // put icon before the message
                            });
                        },
                        error: function (jqXHR, textStatus, errorThrown) {
                            switch (jqXHR.status) {
                                case 409:
                                    App.alert({
                                        container: "#bootstrap_alerts_Breakers", // alerts parent container(by default placed after the page breadcrumbs)
                                        place: "prepend", // append or prepent in container
                                        type: "danger",  // alert's type
                                        message: "Ya existe el Breaker en la subestación.",  // alert's message
                                        close: 1, // make alert closable
                                        reset: 1, // close all previouse alerts first
                                        focus: 1, // auto scroll to the alert after shown
                                        closeInSeconds: 5,//, // auto close after defined seconds
                                        icon: "fa fa-danger" // put icon before the message
                                    });
                                    break;
                                case 400:
                                    App.alert({
                                        container: "#bootstrap_alerts_Breakers", // alerts parent container(by default placed after the page breadcrumbs)
                                        place: "prepend", // append or prepent in container
                                        type: "danger",  // alert's type
                                        message: "Ocurrió un error al insertar el Breaker.",  // alert's message
                                        close: 1, // make alert closable
                                        reset: 1, // close all previouse alerts first
                                        focus: 1, // auto scroll to the alert after shown
                                        closeInSeconds: 5,//, // auto close after defined seconds
                                        icon: "fa fa-danger" // put icon before the message
                                    });
                                    break;
                                default:
                            }
                            //commit(false);
                        }
                    });

                }
            });
        });

