        <script>
        $(document).ready(function () {
            inicializar_select2();


            function inicializar_select2() {
                $(".select2").select2({
                    placeholder: "Seleccione un elemento de la lista"
                });
            }

        //$("#transformadores_usoplanta").css("display", "none");

       

            $("#Codigo").change(function () {
                autogenerarNombreServicioRedCorrienteAlterna();
                cargarTablaBancosTransformadores();

                $("#tablaBancosTransformadores").html(null);
                $("#tablaTransformadores").html(null);

                $("#transformadores_usoplanta").css("display", "none");

            });

            function autogenerarNombreServicioRedCorrienteAlterna() {
                var combo = document.getElementById("Codigo");
                var selected = combo.options[combo.selectedIndex].text;
                var posicion = selected.lastIndexOf("-");

                $("#NombreServicioCA").val("Red de Corriente Alterna " + selected.substring(posicion + 1));
            }

            function cargarTablaBancosTransformadores() {
                var sub = $("#Codigo").val();
                if (sub != "") {
                    $.ajax({
                        url: '@Url.Action("CargarTablaBancosTransformadores", "Sub_RedCorrienteAlterna")',
                            method: "POST",
                            data: { codigoSubestacion: sub },
                            success: function (data) {
                                $("#tablaBancosTransformadores").html(data);
                                var table = $("#datatable_bancostransformadores").dataTable({
                                    "select": "single",
                                    "responsive": true,
                                    "ordering": true,
                                    "info": false,
                                    "paging": false,
                                    "searching": false
                                });


                                if (!jQuery.isEmptyObject(data)) {
                                    $("#transformadores_usoplanta").css("display", "block");
                                }

                                    table.on('select', function (e, dt, type, indexes) {
                                        $.ajax({
                                            url: '@Url.Action("CargarTablaTransformadores", "Sub_RedCorrienteAlterna")',
                                            method: "POST",
                                            data: { codigoBancoTransformador: $("#codigo_bancotransformador", ".selected").val() },
                                            success: function (data) {
                                                $("#tablaTransformadores").html(data);
                                                var table = $("#datatable_transformadores").dataTable({
                                                    "select": "single",
                                                    "responsive": true,
                                                    "ordering": true,
                                                    "info": false,
                                                    "paging": false,
                                                    "searching": false
                                                });
                                            }
                                        });
                                    });
                            }
                    });

                }
            }
        });
        </script>
