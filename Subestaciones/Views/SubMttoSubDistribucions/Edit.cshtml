            let valorfecha = $("#Fecha").val();
            let date = valorfecha.split(' ')[0];
            let fechaDia = date.split('/')[1];
            let fechaMes = date.split('/')[0];
            let fechaAnno = date.split('/')[2];

            $("#CodigoSub").attr('disabled', true);
            $("#Fecha").attr('disabled', true);

            $('#Fecha').val(`${fechaDia}/${fechaMes}/${fechaAnno}`);

            $("#FromEdit").submit(function () {
                $("#CodigoSub").removeAttr('disabled');
                $("#Fecha").removeAttr('disabled');

                $('#f').val(`${fechaAnno}-${fechaMes}-${fechaDia}`);
                return true;
            });

            //mostrar primer tab al cargar
            Tab(1);
            var selectedTab = 1;

