@if (ViewBag.cantMttoPara > 0)

{
    <table id="tabla_MttosPararrayos" class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>N&uacute;mero serie</th>
                <th>Fase</th>
                <th>Tensi&oacute;n nominal</th>
                <th>Corriente nominal</th>
                <th>Fabricante</th>
                <th>Acciones</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.listaMttoPara)
            {
                string llaves = item.CodigoSub + "|" + item.Fecha + "|" + item.Id_Pararrayo + "|" + "para" + "|" + item.Id_AdminPararrayo;

                <tr>
                    <td>
                        @item.serie
                    </td>

                    <td>
                        @item.Fase
                    </td>
                    <td>
                        @item.tension
                    </td>
                    <td>
                        @item.corr
                    </td>
                    <td>
                        @item.fab
                    </td>
                    <td style="width: 125px;">
                        <a href="@Url.Action("Details","Sub_MttoDistPararrayos", new { subcodigo = item.CodigoSub, fecha = item.Fecha, idPara = item.Id_Pararrayo, EA =  item.Id_AdminPararrayo, valor = ViewBag.valor} )" class="btn btn-info  mt-sweetalert btn-xs" title="Detalles"><i class="fa fa-eye"></i>  </a>
                        <a href="@Url.Action("Edit","Sub_MttoDistPararrayos", new {subcodigo = item.CodigoSub, fecha = item.Fecha, idPara = item.Id_Pararrayo, EA = item.Id_AdminPararrayo, valor = ViewBag.valor} )" class="btn btn-warning  mt-sweetalert btn-xs ocultable" title="Editar"><i class="fa fa-pencil"></i>  </a>
                        <a href="javascript:;" id="@llaves" value="barra" title="Eliminar" class="btn btn-default mt-sweetalert btn-xs ocultable" data-title="¿Est&aacute; seguro de eliminar el mantenimiento?" data-message="¡Los valores que están en la fila a eliminar no se podr&aacute;n recuperar!"
                           data-type="info" data-show-confirm-button="true" data-confirm-button-class="btn-success" data-show-cancel-button="true" data-cancel-button-class="btn-default" data-close-on-confirm="false" data-close-on-cancel="false"
                           data-confirm-button-text='¡S&iacute;, eliminar!' data-cancel-button-text='¡No, cancelar!' data-popup-title-success="¡Eliminado!" data-popup-message-success="El mtto ha sido eliminado." data-popup-title-cancel="Cancelado"
                           data-popup-message-cancel="La acción de eliminar ha sido cancelada."><i class="fa fa-trash-o"></i></a>

                    </td>


                </tr>
            }

        </tbody>
    </table>
}
<script>
     var v="@ViewBag.valor";
    if  (v=="Detail") {
        $(".ocultable").hide();
    }

</script>
